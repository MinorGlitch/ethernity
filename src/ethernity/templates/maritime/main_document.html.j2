{% from 'css_base.j2' import reset_styles, page_styles, qr_grid_items_styles, qr_image_styles %}
{% from 'css_variables.j2' import common_variables %}
{% from 'html_components.j2' import divider, qr_grid, qr_grid_items, qr_sequence, instructions_lines %}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }
    :root {
{{ common_variables() }}

      /* Theme-specific colors */
      --ink: #0c2230;
      --ink-muted: #31495a;
      --ink-soft: #5a7384;
      --ink-label: #223643;
      --accent: #0c2b3c;
      --rail: #0c2b3c;
      --paper-top: #f2f6f7;
      --paper-bottom: #dfe7ea;
      --surface: #f7fbfc;
      --surface-border: #b7c4c9;
      --rule: #c1ced2;
      --rule-strong: #869aa3;
      --note: #e9f0f2;
      --tab: #c7dde0;
      --pin: #465c68;
      --stamp: #1f5e73;

      /* Theme-specific fonts */
      --font-title: "Baskerville", "Goudy Old Style", "Palatino Linotype", "Palatino", serif;
      --font-body: "Gill Sans", "Trebuchet MS", "Verdana", sans-serif;
      --font-mono: "SFMono-Regular", "Menlo", "Consolas", "Courier New", monospace;

      /* Theme-specific sizes */
      --header-pad: 2mm 3mm;
      --instructions-pad: 0 3mm;
      --qr-card-pad: 0.8mm;
      --space-8: 4.5mm;
      --border-fine: 0.25mm;
      --radius-md: 1mm;
      --title-size: 15.5pt;
      --subtitle-size: 8pt;
      --meta-size: 7.2pt;
      --meta-label-size: 6pt;
      --meta-value-size: 7.2pt;

    }
{{ reset_styles() }}
{{ page_styles(page_width_mm, page_height_mm) }}
    .header {
      position: absolute;
      left: {{ margin_mm }}mm;
      top: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 1fr 48mm;
      gap: var(--space-8);
      align-items: start;
    }
    .header-left {
      display: grid;
      gap: var(--space-4);
    }
    .title {
      font-size: var(--title-size);
      font-weight: 600;
      font-family: var(--font-title);
      color: var(--ink);
      line-height: 1.1;
      letter-spacing: 0.14em;
      text-transform: uppercase;
    }
    .subtitle {
      font-size: var(--subtitle-size);
      font-style: normal;
      color: var(--ink-muted);
      line-height: 1.2;
      letter-spacing: 0.18em;
      text-transform: uppercase;
    }
    .meta-grid {
      display: grid;
      grid-template-columns: 22mm auto;
      gap: var(--space-2) var(--space-6);
      font-size: var(--meta-size);
      line-height: 1.2;
      align-items: baseline;
    }
    .meta-label {
      font-size: var(--meta-label-size);
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--ink-soft);
      font-family: var(--font-title);
    }
    .meta-value {
      font-size: var(--meta-value-size);
      letter-spacing: 0.08em;
      color: var(--ink);
      font-family: var(--font-mono);
    }
    .header-right {
      justify-self: end;
      align-self: start;
      border: var(--border-heavy) solid var(--rule-strong);
      border-radius: var(--radius-md);
      padding: var(--header-pad);
      text-align: left;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      background: linear-gradient(180deg, rgba(248, 251, 250, 0.95) 0%, var(--surface) 100%);
    }
    .stamp-title {
      font-size: 7pt;
      color: var(--stamp);
      font-family: var(--font-title);
    }
    .stamp-value {
      margin-top: var(--space-1);
      font-size: 9pt;
      font-weight: 700;
      color: var(--ink);
      font-family: var(--font-title);
      letter-spacing: 0.12em;
    }
    .divider {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      height: 0.4mm;
      background: repeating-linear-gradient(
        90deg,
        var(--rule-strong) 0,
        var(--rule-strong) 14mm,
        transparent 14mm,
        transparent 18mm
      );
      opacity: 0.7;
    }
    .instructions {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: minmax(26mm, max-content) 1fr;
      column-gap: var(--space-5);
      font-size: 9pt;
      line-height: 4.5mm;
      color: var(--ink);
      background: linear-gradient(
        90deg,
        rgba(15, 43, 60, 0.06) 0,
        rgba(255, 255, 255, 0) 70%
      );
      border: none;
      border-radius: var(--radius-md);
      padding: 0 3mm;
      box-shadow: none;
      outline: var(--border-strong) solid var(--rule-strong);
      z-index: 2;
    }

.instructions::before {
  content: none;
}
    .instructions-label {
      font-size: 6.5pt;
      font-weight: 700;
      color: var(--stamp);
      text-transform: uppercase;
      letter-spacing: 0.2em;
      font-family: var(--font-title);
      background: rgba(42, 95, 110, 0.12);
      padding: 0 1.2mm;
      justify-self: start;
      align-self: start;
      grid-column: 1;
      grid-row: 1;
    }
    .instructions > div:not(.instructions-label) {
      grid-column: 2;
      grid-row: 1;
    }
    .qr-grid {
      position: absolute;
      border: none;
      border-radius: var(--radius-md);
      overflow: hidden;
      pointer-events: none;
      z-index: 0;
      background: var(--surface);
      box-shadow: none;
      outline: var(--border-heavy) solid var(--rule-strong);
    }
    .qr-grid::before {
      content: "";
      position: absolute;
      inset: 2mm;
      pointer-events: none;
    }
    .qr-grid::after {
      content: "";
      position: absolute;
      inset: 0;
      background:
        repeating-linear-gradient(
          90deg,
          transparent 0,
          transparent 22mm,
          rgba(16, 37, 51, 0.04) 22mm,
          rgba(16, 37, 51, 0.04) 22.2mm
        ),
        repeating-linear-gradient(
          0deg,
          transparent 0,
          transparent 22mm,
          rgba(16, 37, 51, 0.04) 22mm,
          rgba(16, 37, 51, 0.04) 22.2mm
        );
      opacity: 0.25;
      pointer-events: none;
    }
{{ qr_grid_items_styles() }}
    .qr-cell {
      padding: var(--qr-card-pad);
      box-sizing: border-box;
    }
    .qr-sequence {
      position: absolute;
      left: 0;
      top: 0;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      pointer-events: none;
      z-index: 0;
    }
    .qr-sequence line {
      stroke: var(--rail);
      stroke-width: 0.25mm;
      stroke-dasharray: 1.6mm 1.2mm;
      opacity: 0.5;
    }
    .qr-sequence text {
      fill: var(--rail);
      font-size: 6.5pt;
      font-family: var(--font-mono);
      letter-spacing: 0.1em;
    }
    .qr-card {
      position: relative;
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      z-index: 1;
    }
{{ qr_image_styles() }}
    .qr {
      box-sizing: border-box;
      padding: 0.4mm;
      background: var(--white, #ffffff);
    }
  </style>
</head>
<body>
{% for page in pages %}
  <section class="page">
    <div class="header">
      <div class="header-left">
        <div class="title">{{ doc.title }}</div>
        <div class="meta-grid">
          <div class="meta-label">Document ID</div>
          <div class="meta-value">{{ doc_id }}</div>
          <div class="meta-label">Page</div>
          <div class="meta-value">{{ page.page_label }}</div>
        </div>
      </div>
      <div class="header-right">
        <div class="stamp-title">Created (UTC)</div>
        <div class="stamp-value">{{ created_timestamp_utc }}</div>
      </div>
    </div>
    {{ divider(page) }}

    {% if page.page_num == 1 %}
    <div class="instructions" style="top: {{ page.instructions_y_mm }}mm;">
      <div class="instructions-label">{{ instructions.label }}</div>
      <div>
        {{ instructions_lines(instructions.lines) }}
      </div>
    </div>
    {% endif %}

    {{ qr_grid(page) }}

    {{ qr_sequence(page, page_width_mm, page_height_mm) }}

    {{ qr_grid_items(page, show_index=true) }}
  </section>
{% endfor %}
</body>
</html>
