{% if sentinel_page_label is defined %}
  {% set _sentinel_page_label = sentinel_page_label %}
{% elif page is defined and page.page_label is defined %}
  {% set _sentinel_page_label = page.page_label %}
{% else %}
  {% set _sentinel_page_label = '' %}
{% endif %}
{% set _sentinel_header_title = sentinel_header_title if sentinel_header_title is defined else doc.title %}
{% set _sentinel_header_subtitle = sentinel_header_subtitle if sentinel_header_subtitle is defined else doc.subtitle %}
<div class="sentinel-shell-top-strip relative z-10 shrink-0 min-h-8 py-1 bg-primary border-b-4 border-black flex items-center justify-center px-[15mm]">
  <p class="text-[9px] font-black uppercase tracking-[0.12em] text-black text-center leading-tight">
    {{ sentinel_top_strip_text }}
  </p>
</div>
<header class="sentinel-shell-header relative z-10 shrink-0 border-b-2 border-black pb-3 px-[15mm] grid grid-cols-[minmax(0,1fr)_60mm] gap-6 items-end">
  <div class="min-w-0">
    <h1 class="text-3xl font-black text-black tracking-tighter uppercase leading-none">{{ _sentinel_header_title }}</h1>
    <p class="mt-1 text-xs uppercase tracking-[0.1em] text-text-secondary-light">{{ _sentinel_header_subtitle }}</p>
  </div>
  <div class="min-w-0 w-full text-right font-mono text-[9px] text-text-secondary-light leading-tight">
    <p class="break-all">DOC ID: {{ doc_id }}</p>
    <p>GENERATED (UTC): {{ created_timestamp_utc }}</p>
    <p>{{ _sentinel_page_label }}</p>
  </div>
</header>
