{% macro common_variables() %}
      /* Semantic white */
      --white: #ffffff;

      /* Spacing scale */
      --space-1: 1mm;
      --space-2: 1.2mm;
      --space-3: 1.5mm;
      --space-4: 1.6mm;
      --space-5: 2mm;
      --space-6: 3mm;
      --space-7: 4mm;
      --space-8: 5mm;
      --space-9: 6mm;

      /* Border widths */
      --border-hairline: 0.2mm;
      --border-thin: 0.3mm;
      --border-base: 0.35mm;
      --border-strong: 0.4mm;
      --border-heavy: 0.45mm;
      --border-rail: 1.6mm;

      /* Border radii */
      --radius-none: 0;
      --radius-xs: 0.6mm;
      --radius-sm: 0.8mm;
      --radius-md: 1.2mm;
      --radius-lg: 1.4mm;

      /* Default y-offsets (can be overridden per theme) */
      --divider-y-offset: 0mm;
      --instructions-y-offset: 0mm;
      --keys-y-offset: 0mm;
      --fallback-y-offset: 0mm;
      --qr-y-offset: 0mm;
{% endmacro %}
