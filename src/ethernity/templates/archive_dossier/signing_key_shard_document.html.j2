<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }
    :root {
      --ink: #1a202b;
      --ink-muted: #4a5562;
      --ink-soft: #6d7684;
      --ink-label: #394351;
      --accent: #2b343e;
      --rail: #2b343e;
      --paper-top: #f6f6f1;
      --paper-bottom: #e7e8e0;
      --plate: #fcfcf6;
      --plate-border: #c4c7bb;
      --rule: #c3c8bf;
      --rule-strong: #8f979a;
      --note: #f0f1ea;
      --tab: #d8dbd1;
      --pin: #525a66;
      --stamp: #8a2f36;
      --font-title: "Garamond", "Baskerville", "Palatino Linotype", "Palatino", serif;
      --font-body: "Franklin Gothic Book", "Franklin Gothic Medium", "Gill Sans", "Trebuchet MS", sans-serif;
      --font-mono: "SFMono-Regular", "Menlo", "Consolas", "Courier New", monospace;
      --divider-y-offset: 7mm;
      --instructions-y-offset: 7mm;
      --keys-y-offset: 7mm;
      --fallback-y-offset: 7mm;
      --qr-y-offset: 7mm;
      --header-pad: 2.5mm 2mm;
      --instructions-pad: 0 3mm;
      --qr-card-pad: 0.6mm;
      --fallback-pad: 0 4mm 0 calc(var(--strip-width) + var(--line-num-offset) + 1mm);
      --line-num-offset: 5.2mm;
      --line-num-width: 4.8mm;
      --space-1: 1mm;
      --space-2: 1.2mm;
      --space-3: 1.4mm;
      --space-4: 1.5mm;
      --space-5: 1.6mm;
      --space-6: 2mm;
      --space-7: 3mm;
      --space-8: 4mm;
      --space-9: 6mm;
      --border-hairline: 0.2mm;
      --border-fine: 0.25mm;
      --border-thin: 0.3mm;
      --border-base: 0.35mm;
      --border-strong: 0.45mm;
      --border-heavy: 0.6mm;
      --border-thick: 0.8mm;
      --border-rail: 1.6mm;
      --radius-none: 0;
      --title-size: 16pt;
      --subtitle-size: 8.5pt;
      --meta-size: 7.5pt;
      --meta-label-size: 6.5pt;
      --meta-value-size: 7.5pt;
      --fallback-font-size: 9.0pt;
      --fallback-line: 4.2mm;
      --line-num-size: 6pt;
      --line-num-letter-spacing: 0.08em;
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: var(--font-body);
      color: var(--ink);
      background: var(--paper-top);
      print-color-adjust: exact;
      -webkit-print-color-adjust: exact;
    }
    .page {
      position: relative;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      page-break-after: always;
      overflow: hidden;
      background: var(--paper-top);
    }
    .page:last-child {
      page-break-after: auto;
    }
    .header {
      position: absolute;
      left: {{ margin_mm }}mm;
      top: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 1fr 45mm;
      gap: var(--space-9);
      align-items: start;
    }
    .header-left {
      display: grid;
      gap: var(--space-6);
    }
    .title {
      font-size: var(--title-size);
      font-weight: 700;
      font-family: var(--font-title);
      color: var(--ink);
      line-height: 1.1;
      letter-spacing: 0.18em;
      text-transform: uppercase;
    }
    .subtitle {
      font-size: var(--subtitle-size);
      font-style: normal;
      color: var(--ink-muted);
      line-height: 1.2;
      letter-spacing: 0.14em;
      text-transform: uppercase;
    }
    .meta-grid {
      display: grid;
      grid-template-columns: 24mm auto;
      gap: var(--space-3) var(--space-7);
      font-size: var(--meta-size);
      line-height: 1.2;
      align-items: baseline;
    }
    .meta-label {
      font-size: var(--meta-label-size);
      text-transform: uppercase;
      letter-spacing: 0.18em;
      color: var(--ink-soft);
      font-family: var(--font-title);
    }
    .meta-value {
      font-size: var(--meta-value-size);
      letter-spacing: 0.08em;
      color: var(--ink);
      font-family: var(--font-mono);
    }
    .header-right {
      justify-self: end;
      align-self: start;
      border: var(--border-heavy) solid var(--stamp);
      border-radius: var(--radius-none);
      padding: var(--header-pad);
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      background: rgba(122, 44, 47, 0.08);
    }
    .stamp-title {
      font-size: 7pt;
      color: var(--stamp);
      font-family: var(--font-title);
    }
    .stamp-value {
      margin-top: var(--space-1);
      font-size: 9pt;
      font-weight: 700;
      color: var(--ink);
      font-family: var(--font-title);
      letter-spacing: 0.12em;
    }
    .divider {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      height: 0.6mm;
      background: repeating-linear-gradient(
        90deg,
        var(--rule-strong) 0,
        var(--rule-strong) 8mm,
        transparent 8mm,
        transparent 12mm
      );
      opacity: 0.7;
    }
    .instructions {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: minmax(26mm, max-content) 1fr;
      column-gap: var(--space-6);
      font-size: 9pt;
      line-height: 4.5mm;
      color: var(--ink);
      background: var(--note);
      border: none;
      border-radius: var(--radius-none);
      padding: 0 3mm;
      box-shadow: none;
      outline: var(--border-base) solid var(--rule);
      z-index: 2;
    }
    .instructions::before {
      content: "";
      position: absolute;
      top: -2mm;
      right: 10mm;
      width: 4mm;
      height: 4mm;
      border-radius: 50%;
      background: var(--pin);
      box-shadow: none;
    }
    .instructions-label {
      font-size: 7pt;
      font-weight: 700;
      color: var(--stamp);
      text-transform: uppercase;
      letter-spacing: 0.18em;
      font-family: var(--font-title);
      border: var(--border-base) solid var(--stamp);
      padding: 0.3mm 1.1mm;
      justify-self: start;
      align-self: start;
      background: rgba(122, 44, 47, 0.08);
      grid-column: 1;
      grid-row: 1;
    }
    .instructions > div:not(.instructions-label) {
      grid-column: 2;
      grid-row: 1;
    }
    .qr-grid {
      position: absolute;
      border: var(--border-heavy) double var(--rule-strong);
      border-radius: var(--radius-none);
      overflow: hidden;
      pointer-events: none;
      z-index: 0;
      background: var(--plate);
      box-shadow: none;
    }
    .qr-grid::before {
      content: "";
      position: absolute;
      inset: 1.8mm;
      pointer-events: none;
    }
    .qr-grid::after {
      content: "";
      position: absolute;
      inset: 0;
      background:
        repeating-linear-gradient(
          90deg,
          transparent 0,
          transparent 24mm,
          rgba(26, 31, 38, 0.05) 24mm,
          rgba(26, 31, 38, 0.05) 24.3mm
        ),
        repeating-linear-gradient(
          0deg,
          transparent 0,
          transparent 24mm,
          rgba(26, 31, 38, 0.05) 24mm,
          rgba(26, 31, 38, 0.05) 24.3mm
        );
      opacity: 0.25;
      pointer-events: none;
    }
    .qr-sequence {
      position: absolute;
      left: 0;
      top: 0;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      pointer-events: none;
      z-index: 0;
    }
    .qr-sequence line {
      stroke: var(--stamp);
      stroke-width: 0.3mm;
      stroke-dasharray: 1.2mm 1.2mm;
      opacity: 0.6;
    }
    .qr-sequence text {
      fill: var(--stamp);
      font-size: 7pt;
      font-family: var(--font-mono);
      letter-spacing: 0.08em;
    }
    .qr-card {
      position: absolute;
      box-sizing: border-box;
      z-index: 1;
    }
    .qr-index {
      position: absolute;
      top: var(--qr-card-pad);
      left: var(--qr-card-pad);
      transform: translate(-3mm, -5mm);
      font-size: 6pt;
      font-family: var(--font-mono);
      letter-spacing: 0.08em;
      color: var(--ink);
      background: var(--plate);
      border: var(--border-fine) solid var(--rule);
      padding: 0.2mm 0.8mm;
    }
    .qr {
      width: 100%;
      height: 100%;
      display: block;
      image-rendering: pixelated;
      box-sizing: border-box;
      padding: 0.4mm;
      background: #ffffff;
    }
    .fallback {
      --strip-width: 8mm;
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ fallback.width_mm }}mm;
      font-family: "Courier", "Courier New", monospace;
      font-size: 9.0pt;
      line-height: var(--fallback-line);
      letter-spacing: 0;
      font-kerning: none;
      font-variant-ligatures: none;
      font-feature-settings: "liga" 0, "calt" 0;
      color: var(--ink);
      background: var(--plate);
      padding: 0 4mm 0 calc(var(--strip-width) + var(--line-num-offset) + 1mm);
      overflow: hidden;
      border: none;
      box-shadow: none;
      border-radius: var(--radius-none);
      font-variant-numeric: tabular-nums;
      outline: var(--border-base) solid var(--rule);
      z-index: 2;
    }
    .fallback::before {
      content: "";
      position: absolute;
      left: 0;
      top: 0;
      width: var(--strip-width);
      height: 100%;
      background: linear-gradient(
        90deg,
        var(--rail) 0,
        var(--rail) 1.2mm,
        var(--tab) 1.2mm,
        var(--tab) 100%
      );
      border-right: var(--border-base) solid var(--rule);
    }
    .fallback-title {
      position: absolute;
      left: 1.4mm;
      top: 1.5mm;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.18em;
      color: var(--stamp);
      font-family: var(--font-title);
      font-size: 7pt;
      writing-mode: vertical-rl;
      line-height: var(--fallback-line);
      margin: 0;
      padding: 0;
    }
    .fallback-lines {
      position: relative;
      counter-reset: line;
      padding-left: 0;
      padding-top: 0;
      background: none;
    }
    .fallback-line {
      position: relative;
      line-height: var(--fallback-line);
      margin: 0;
      white-space: pre;
    }
    .fallback-line::before {
      counter-increment: line;
      content: counter(line, decimal-leading-zero);
      position: absolute;
      left: calc(-1 * var(--line-num-offset));
      width: var(--line-num-width);
      text-align: right;
      font-size: var(--line-num-size);
      letter-spacing: var(--line-num-letter-spacing);
      color: var(--ink-soft);
    }
  </style>
</head>
<body>
{% for page in pages %}
  <section class="page">
    <div class="header">
      <div class="header-left">
        <div class="title">Signing Key Shard</div>
        <div class="subtitle">Signing key shard {{ shard_index }} of {{ shard_total }}</div>
        <div class="meta-grid">
          <div class="meta-label">Document ID</div>
          <div class="meta-value">{{ doc_id }}</div>
          <div class="meta-label">Page</div>
          <div class="meta-value">{{ page.page_label }}</div>
        </div>
      </div>
      <div class="header-right">
        <div class="stamp-title">Created (UTC)</div>
        <div class="stamp-value">{{ created_timestamp_utc }}</div>
      </div>
    </div>
    <div class="divider" style="top: calc({{ page.divider_y_mm }}mm + var(--divider-y-offset));"></div>

    {% if page.page_num == 1 %}
    <div class="instructions" style="top: calc({{ page.instructions_y_mm }}mm + var(--instructions-y-offset));">
      <div class="instructions-label">Instructions</div>
      <div>
        <div>This document is one shard of the signing key.</div>
        <div>Keep signing-key shards separate and secure.</div>
      </div>
    </div>
    {% endif %}

    {% if page.qr_outline %}
    <div
      class="qr-grid"
      style="left: {{ page.qr_outline.x_mm }}mm; top: calc({{ page.qr_outline.y_mm }}mm + var(--qr-y-offset)); width: {{ page.qr_outline.width_mm }}mm; height: {{ page.qr_outline.height_mm }}mm;"
    ></div>
    {% endif %}

    {% if page.sequence %}
    <svg style="transform: translateY(var(--qr-y-offset));" class="qr-sequence" viewBox="0 0 {{ page_width_mm }} {{ page_height_mm }}">
      {% for line in page.sequence.lines %}
      <line x1="{{ line.x1 }}" y1="{{ line.y1 }}" x2="{{ line.x2 }}" y2="{{ line.y2 }}"></line>
      {% endfor %}
      {% for label in page.sequence.labels %}
      <text x="{{ label.x }}" y="{{ label.y }}" text-anchor="middle" dominant-baseline="central">
        {{ label.text }}
      </text>
      {% endfor %}
    </svg>
    {% endif %}

    {% for slot in page.qr_slots %}
    <div
      class="qr-card"
      style="left: {{ slot.x_mm + 0.8 }}mm; top: calc({{ slot.y_mm + 0.8 }}mm + var(--qr-y-offset)); width: {{ slot.size_mm - 1.6 }}mm; height: {{ slot.size_mm - 1.6 }}mm;"
    >
      <div class="qr-index">{{ "%02d"|format(slot.index) }}</div>
      <img class="qr" src="{{ slot.data_uri }}" alt="QR code {{ slot.index }}">
    </div>
    {% endfor %}

    {% if page.fallback_blocks %}
      {%- for block in page.fallback_blocks %}
      <div
        class="fallback"
        style="top: calc({{ block.y_mm }}mm + var(--fallback-y-offset));"
      >
        {%- if block.title %}
        <div class="fallback-title">{{ block.title }}</div>
        {%- endif %}
        <div class="fallback-lines" style="counter-reset: line {{ block.line_offset | default(0) }};">
          {%- for line in block.lines %}
          <div class="fallback-line">{{ line }}</div>
          {%- endfor %}
        </div>
      </div>
      {%- endfor %}
    {% endif %}
  </section>
{% endfor %}
</body>
</html>
