<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }
    :root {
      --ink: #1a202b;
      --ink-muted: #4a5562;
      --ink-soft: #6d7684;
      --ink-label: #394351;
      --accent: #2b343e;
      --rail: #2b343e;
      --paper-top: #f6f6f1;
      --paper-bottom: #e7e8e0;
      --plate: #fcfcf6;
      --plate-border: #c4c7bb;
      --rule: #c3c8bf;
      --rule-strong: #8f979a;
      --note: #f0f1ea;
      --tab: #d8dbd1;
      --pin: #525a66;
      --stamp: #8a2f36;
      --instructions-gap: 4mm;
      --content-gap: 20mm;
      --first-page-offset: 20mm;
      --font-title: "Garamond", "Baskerville", "Palatino Linotype", "Palatino", serif;
      --font-body: "Franklin Gothic Book", "Franklin Gothic Medium", "Gill Sans", "Trebuchet MS", sans-serif;
      --font-mono: "SFMono-Regular", "Menlo", "Consolas", "Courier New", monospace;
      --header-pad: 2.5mm 2mm;
      --instructions-pad: 0 3mm;
      --fallback-pad: 0 4mm 0 calc(var(--strip-width) + var(--line-num-offset) + 1mm);
      --line-num-offset: 6.5mm;
      --line-num-width: 4.8mm;
      --space-1: 1mm;
      --space-2: 1.2mm;
      --space-3: 1.4mm;
      --space-4: 1.5mm;
      --space-5: 1.6mm;
      --space-6: 2mm;
      --space-7: 3mm;
      --space-8: 4mm;
      --space-9: 6mm;
      --border-hairline: 0.2mm;
      --border-fine: 0.25mm;
      --border-thin: 0.3mm;
      --border-base: 0.35mm;
      --border-strong: 0.45mm;
      --border-heavy: 0.6mm;
      --border-thick: 0.8mm;
      --border-rail: 1.6mm;
      --radius-none: 0;
      --title-size: 16pt;
      --subtitle-size: 8.5pt;
      --meta-size: 7.5pt;
      --meta-label-size: 6.5pt;
      --meta-value-size: 7.5pt;
      --fallback-font-size: 9.0pt;
      --fallback-line: 4.2mm;
      --line-num-size: 6pt;
      --line-num-letter-spacing: 0.08em;
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: var(--font-body);
      color: var(--ink);
      background: var(--paper-top);
      print-color-adjust: exact;
      -webkit-print-color-adjust: exact;
    }
    .page {
      position: relative;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      page-break-after: always;
      overflow: hidden;
      background: var(--paper-top);
    }
    .page:last-child {
      page-break-after: auto;
    }
    .header {
      position: absolute;
      left: {{ margin_mm }}mm;
      top: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 1fr 45mm;
      gap: var(--space-9);
      align-items: start;
    }
    .header-left {
      display: grid;
      gap: var(--space-6);
    }
    .title {
      font-size: var(--title-size);
      font-weight: 700;
      font-family: var(--font-title);
      color: var(--ink);
      line-height: 1.1;
      letter-spacing: 0.18em;
      text-transform: uppercase;
    }
    .subtitle {
      font-size: var(--subtitle-size);
      font-style: normal;
      color: var(--ink-muted);
      line-height: 1.2;
      letter-spacing: 0.14em;
      text-transform: uppercase;
    }
    .meta-grid {
      display: grid;
      grid-template-columns: 24mm auto;
      gap: var(--space-3) var(--space-7);
      font-size: var(--meta-size);
      line-height: 1.2;
      align-items: baseline;
    }
    .meta-label {
      font-size: var(--meta-label-size);
      text-transform: uppercase;
      letter-spacing: 0.18em;
      color: var(--ink-soft);
      font-family: var(--font-title);
    }
    .meta-value {
      font-size: var(--meta-value-size);
      letter-spacing: 0.08em;
      color: var(--ink);
      font-family: var(--font-mono);
    }
    .header-right {
      justify-self: end;
      align-self: start;
      border: var(--border-heavy) solid var(--stamp);
      border-radius: var(--radius-none);
      padding: var(--header-pad);
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      background: rgba(122, 44, 47, 0.08);
    }
    .stamp-title {
      font-size: 7pt;
      color: var(--stamp);
      font-family: var(--font-title);
    }
    .stamp-value {
      margin-top: var(--space-1);
      font-size: 9pt;
      font-weight: 700;
      color: var(--ink);
      font-family: var(--font-title);
      letter-spacing: 0.12em;
    }
    .divider {
      width: 100%;
      height: 0.6mm;
      background: repeating-linear-gradient(
        90deg,
        var(--rule-strong) 0,
        var(--rule-strong) 8mm,
        transparent 8mm,
        transparent 12mm
      );
      opacity: 0.7;
    }
    .content {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      bottom: {{ margin_mm }}mm;
      display: flex;
      flex-direction: column;
    }
    .content.first-page {
      padding-top: var(--first-page-offset);
    }
    .fallback-stack {
      display: flex;
      flex-direction: column;
      flex: 1;
      min-height: 0;
      margin-top: var(--content-gap);
    }
    .fallback-stack.has-instructions {
      margin-top: var(--instructions-gap);
    }
    .fallback.main-fallback {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    .fallback.main-fallback .fallback-lines {
      flex: 1;
      min-height: 0;
    }
    .instructions {
      display: grid;
      grid-template-columns: minmax(26mm, max-content) 1fr;
      column-gap: var(--space-6);
      font-size: 9pt;
      line-height: 4.5mm;
      color: var(--ink);
      background: var(--note);
      border: none;
      border-radius: var(--radius-none);
      padding: var(--instructions-pad);
      box-shadow: none;
      outline: var(--border-base) solid var(--rule);
      z-index: 2;
    }
    .instructions::before {
      content: "";
      position: absolute;
      top: -2mm;
      right: 10mm;
      width: 4mm;
      height: 4mm;
      border-radius: 50%;
      background: var(--pin);
      box-shadow: none;
    }
    .instructions-label {
      font-size: 7pt;
      font-weight: 700;
      color: var(--stamp);
      text-transform: uppercase;
      letter-spacing: 0.18em;
      font-family: var(--font-title);
      border: var(--border-base) solid var(--stamp);
      padding: 0.3mm 1.1mm;
      justify-self: start;
      align-self: start;
      background: rgba(122, 44, 47, 0.08);
      grid-column: 1;
      grid-row: 1;
    }
    .instructions > div:not(.instructions-label) {
      grid-column: 2;
      grid-row: 1;
    }
    .fallback {
      --strip-width: 8mm;
      position: relative;
      width: 100%;
      font-family: "Courier", "Courier New", monospace;
      font-size: var(--fallback-font-size);
      line-height: var(--fallback-line);
      letter-spacing: 0;
      font-kerning: none;
      font-variant-ligatures: none;
      font-feature-settings: "liga" 0, "calt" 0;
      color: var(--ink);
      background: var(--plate);
      padding: var(--fallback-pad);
      overflow: hidden;
      border: none;
      box-shadow: none;
      border-radius: var(--radius-none);
      font-variant-numeric: tabular-nums;
      outline: var(--border-base) solid var(--rule);
      z-index: 2;
    }
    .fallback::before {
      content: "";
      position: absolute;
      left: 0;
      top: 0;
      width: var(--strip-width);
      height: 100%;
      background: linear-gradient(
        90deg,
        var(--rail) 0,
        var(--rail) 1.2mm,
        var(--tab) 1.2mm,
        var(--tab) 100%
      );
      border-right: var(--border-base) solid var(--rule);
    }
    .fallback-title {
      position: absolute;
      left: 1.4mm;
      top: 1.5mm;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.18em;
      color: var(--stamp);
      font-family: var(--font-title);
      font-size: 7pt;
      writing-mode: vertical-rl;
      line-height: var(--fallback-line);
      margin: 0;
      padding: 0;
    }
    .fallback-lines {
      position: relative;
      counter-reset: line;
      padding-left: 0;
      padding-top: 0;
      background: none;
    }
    .fallback-line {
      position: relative;
      line-height: var(--fallback-line);
      margin: 0;
      white-space: pre;
    }
    .fallback-line::before {
      counter-increment: line;
      content: counter(line, decimal-leading-zero);
      position: absolute;
      left: calc(-1 * var(--line-num-offset));
      width: var(--line-num-width);
      text-align: right;
      font-size: var(--line-num-size);
      letter-spacing: var(--line-num-letter-spacing);
      color: var(--ink-soft);
    }
  </style>
</head>
<body>
{% set fallback_line_height_mm = 4.2 %}
{% set auth_fallback_title = "Auth Frame" %}
{% set auth_fallback_offset_mm = -2.0 %}
{% set main_fallback_title = "Main Frame" %}
{% set signing_pub_label = "Signing public key (hex):" %}
{% set quorum_prefix = "Recover with " %}
{% set quorum_suffix = " shard documents." %}
{% set key_extract = namespace(pub_lines=[], collecting_pub=false, quorum_line="") %}
{% for line in keys.lines %}
  {% if line == signing_pub_label %}
    {% set key_extract.collecting_pub = true %}
  {% elif key_extract.collecting_pub and line.startswith("Signing private key") %}
    {% set key_extract.collecting_pub = false %}
  {% elif line.startswith(quorum_prefix) and line.endswith(quorum_suffix) %}
    {% set key_extract.quorum_line = line %}
  {% elif key_extract.collecting_pub %}
    {% set key_extract.pub_lines = key_extract.pub_lines + [line] %}
  {% endif %}
{% endfor %}
{% set quorum_value = key_extract.quorum_line.replace(quorum_prefix, "").replace(quorum_suffix, "") if key_extract.quorum_line else "" %}
{% for page in pages %}
{% set divider_y_mm = page.divider_y_mm %}
  <section class="page">
    <div class="header">
      <div class="header-left">
        <div class="title">Recovery Document</div>
        <div class="subtitle">Keys + Text Fallback</div>
        <div class="meta-grid">
          <div class="meta-label">Document ID</div>
          <div class="meta-value">{{ doc_id }}</div>
          {% if key_extract.quorum_line %}
          <div class="meta-label">Shard Quorum</div>
          <div class="meta-value">{{ quorum_value }}</div>
          {% endif %}
          {% if key_extract.pub_lines %}
          <div class="meta-label">Signing Pub Key</div>
          <div class="meta-value">
            {%- for line in key_extract.pub_lines -%}
            {{ line }}{% if not loop.last %}<br>{% endif %}
            {%- endfor -%}
          </div>
          {% endif %}
          <div class="meta-label">Page</div>
          <div class="meta-value">{{ page.page_label }}</div>
        </div>
      </div>
      <div class="header-right">
        <div class="stamp-title">Created (UTC)</div>
        <div class="stamp-value">{{ created_timestamp_utc }}</div>
      </div>
    </div>
    <div class="content{% if page.page_num == 1 %} first-page{% endif %}" style="top: {{ divider_y_mm }}mm;">
      <div class="divider"></div>

      {% if page.page_num == 1 %}
      <div class="instructions">
        <div class="instructions-label">Instructions</div>
        <div>
          <div>This document contains recovery keys and full text fallback.</div>
          <div>Keep it separate from the QR document.</div>
          <div>Fallback includes AUTH + MAIN sections; keep the labels when transcribing.</div>
        </div>
      </div>
      {% endif %}

      {% if page.fallback_blocks %}
      <div class="fallback-stack{% if page.page_num == 1 %} has-instructions{% endif %}">
        {%- for block in page.fallback_blocks %}
        {% set gap_mm = (block.gap_lines | default(0)) * fallback_line_height_mm %}
        {% set block_offset_mm = gap_mm + (auth_fallback_offset_mm if block.title == auth_fallback_title else 0.0) %}
        {% set is_main_block = block.section_title == main_fallback_title %}
        <div
          class="fallback{% if is_main_block %} main-fallback{% endif %}"
          style="margin-top: {{ block_offset_mm }}mm;"
        >
          {%- if block.title %}
          <div class="fallback-title">{{ block.title }}</div>
          {%- endif %}
          <div class="fallback-lines" style="counter-reset: line {{ block.line_offset | default(0) }};">
            {%- for line in block.lines %}
            <div class="fallback-line">{{ line }}</div>
            {%- endfor %}
          </div>
        </div>
        {%- endfor %}
      </div>
      {% endif %}
    </div>
  </section>
{% endfor %}
</body>
</html>
