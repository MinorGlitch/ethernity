<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }
    :root {
      --ink: #0c2230;
      --ink-muted: #31495a;
      --ink-soft: #5a7384;
      --ink-label: #223643;
      --accent: #0c2b3c;
      --rail: #0c2b3c;
      --paper-top: #f2f6f7;
      --paper-bottom: #dfe7ea;
      --plate: #f7fbfc;
      --plate-border: #b7c4c9;
      --rule: #c1ced2;
      --rule-strong: #869aa3;
      --note: #e9f0f2;
      --tab: #c7dde0;
      --pin: #465c68;
      --stamp: #1f5e73;
      --font-title: "Baskerville", "Goudy Old Style", "Palatino Linotype", "Palatino", serif;
      --font-body: "Gill Sans", "Trebuchet MS", "Verdana", sans-serif;
      --font-mono: "SFMono-Regular", "Menlo", "Consolas", "Courier New", monospace;
      --divider-y-offset: 7mm;
      --instructions-y-offset: 7mm;
      --keys-y-offset: 7mm;
      --fallback-y-offset: 7mm;
      --qr-y-offset: 7mm;
      --header-pad: 2mm 3mm;
      --instructions-pad: 0 3mm;
      --qr-card-pad: 0.8mm;
      --fallback-pad: 0 4mm 0 calc(var(--line-num-offset) + var(--line-num-width) + 2.6mm);
      --line-num-offset: 5.6mm;
      --line-num-width: 4.5mm;
      --space-1: 1mm;
      --space-2: 1.2mm;
      --space-3: 1.5mm;
      --space-4: 1.6mm;
      --space-5: 2mm;
      --space-6: 3mm;
      --space-7: 4mm;
      --space-8: 4.5mm;
      --space-9: 6mm;
      --border-hairline: 0.2mm;
      --border-fine: 0.25mm;
      --border-thin: 0.3mm;
      --border-base: 0.35mm;
      --border-strong: 0.4mm;
      --border-heavy: 0.45mm;
      --border-rail: 0.8mm;
      --radius-none: 0;
      --radius-sm: 0.8mm;
      --radius-md: 1mm;
      --title-size: 15.5pt;
      --subtitle-size: 8pt;
      --meta-size: 7.2pt;
      --meta-label-size: 6pt;
      --meta-value-size: 7.2pt;
      --fallback-font-size: 9.0pt;
      --fallback-line: 4.2mm;
      --line-num-size: 5.8pt;
      --line-num-letter-spacing: 0.1em;
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: var(--font-body);
      color: var(--ink);
      background: var(--paper-top);
      print-color-adjust: exact;
      -webkit-print-color-adjust: exact;
    }
    .page {
      position: relative;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      page-break-after: always;
      overflow: hidden;
      background: var(--paper-top);
    }
    .page:last-child {
      page-break-after: auto;
    }
    .header {
      position: absolute;
      left: {{ margin_mm }}mm;
      top: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 1fr 48mm;
      gap: var(--space-8);
      align-items: start;
    }
    .header-left {
      display: grid;
      gap: var(--space-4);
    }
    .title {
      font-size: var(--title-size);
      font-weight: 600;
      font-family: var(--font-title);
      color: var(--ink);
      line-height: 1.1;
      letter-spacing: 0.14em;
      text-transform: uppercase;
    }
    .subtitle {
      font-size: var(--subtitle-size);
      font-style: normal;
      color: var(--ink-muted);
      line-height: 1.2;
      letter-spacing: 0.18em;
      text-transform: uppercase;
    }
    .meta-grid {
      display: grid;
      grid-template-columns: 22mm auto;
      gap: var(--space-2) var(--space-6);
      font-size: var(--meta-size);
      line-height: 1.2;
      align-items: baseline;
    }
    .meta-label {
      font-size: var(--meta-label-size);
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--ink-soft);
      font-family: var(--font-title);
    }
    .meta-value {
      font-size: var(--meta-value-size);
      letter-spacing: 0.08em;
      color: var(--ink);
      font-family: var(--font-mono);
    }
    .header-right {
      justify-self: end;
      align-self: start;
      border: var(--border-heavy) solid var(--rule-strong);
      border-radius: var(--radius-md);
      padding: var(--header-pad);
      text-align: left;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      background: linear-gradient(180deg, rgba(248, 251, 250, 0.95) 0%, var(--plate) 100%);
    }
    .stamp-title {
      font-size: 7pt;
      color: var(--stamp);
      font-family: var(--font-title);
    }
    .stamp-value {
      margin-top: var(--space-1);
      font-size: 9pt;
      font-weight: 700;
      color: var(--ink);
      font-family: var(--font-title);
      letter-spacing: 0.12em;
    }
    .divider {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      height: 0.4mm;
      background: repeating-linear-gradient(
        90deg,
        var(--rule-strong) 0,
        var(--rule-strong) 14mm,
        transparent 14mm,
        transparent 18mm
      );
      opacity: 0.7;
    }
    .instructions {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: minmax(26mm, max-content) 1fr;
      column-gap: var(--space-5);
      font-size: 9pt;
      line-height: 4.5mm;
      color: var(--ink);
      background: linear-gradient(
        90deg,
        rgba(15, 43, 60, 0.06) 0,
        rgba(255, 255, 255, 0) 70%
      );
      border: none;
      border-radius: var(--radius-md);
      padding: 0 3mm;
      box-shadow: none;
      outline: var(--border-strong) solid var(--rule-strong);
      z-index: 2;
    }

.instructions::before {
  content: none;
}
    .instructions-label {
      font-size: 6.5pt;
      font-weight: 700;
      color: var(--stamp);
      text-transform: uppercase;
      letter-spacing: 0.2em;
      font-family: var(--font-title);
      background: rgba(42, 95, 110, 0.12);
      padding: 0 1.2mm;
      justify-self: start;
      align-self: start;
      grid-column: 1;
      grid-row: 1;
    }
    .instructions > div:not(.instructions-label) {
      grid-column: 2;
      grid-row: 1;
    }
    .qr-grid {
      position: absolute;
      border: none;
      border-radius: var(--radius-md);
      overflow: hidden;
      pointer-events: none;
      z-index: 0;
      background: var(--plate);
      box-shadow: none;
      outline: var(--border-heavy) solid var(--rule-strong);
    }
    .qr-grid::before {
      content: "";
      position: absolute;
      inset: 2mm;
      pointer-events: none;
    }
    .qr-grid::after {
      content: "";
      position: absolute;
      inset: 0;
      background:
        repeating-linear-gradient(
          90deg,
          transparent 0,
          transparent 22mm,
          rgba(16, 37, 51, 0.04) 22mm,
          rgba(16, 37, 51, 0.04) 22.2mm
        ),
        repeating-linear-gradient(
          0deg,
          transparent 0,
          transparent 22mm,
          rgba(16, 37, 51, 0.04) 22mm,
          rgba(16, 37, 51, 0.04) 22.2mm
        );
      opacity: 0.25;
      pointer-events: none;
    }
    .qr-sequence {
      position: absolute;
      left: 0;
      top: 0;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      pointer-events: none;
      z-index: 0;
    }
    .qr-sequence line {
      stroke: var(--rail);
      stroke-width: 0.25mm;
      stroke-dasharray: 1.6mm 1.2mm;
      opacity: 0.5;
    }
    .qr-sequence text {
      fill: var(--rail);
      font-size: 6.5pt;
      font-family: var(--font-mono);
      letter-spacing: 0.1em;
    }
    .qr-card {
      position: absolute;
      box-sizing: border-box;
      z-index: 1;
    }
    .qr-index {
      position: absolute;
      top: var(--qr-card-pad);
      left: var(--qr-card-pad);
      transform: translate(-3mm, -5mm);
      font-size: 6pt;
      font-family: var(--font-mono);
      letter-spacing: 0.08em;
      color: var(--ink);
      background: var(--note);
      border: var(--border-fine) solid var(--rule-strong);
      padding: 0.2mm 0.8mm;
      border-radius: var(--radius-sm);
    }
    .qr {
      width: 100%;
      height: 100%;
      display: block;
      image-rendering: pixelated;
      box-sizing: border-box;
      padding: 0.4mm;
      background: #ffffff;
    }
    .fallback {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ fallback.width_mm }}mm;
      font-family: "Courier", "Courier New", monospace;
      font-size: 9.0pt;
      line-height: var(--fallback-line);
      letter-spacing: 0;
      font-kerning: none;
      font-variant-ligatures: none;
      font-feature-settings: "liga" 0, "calt" 0;
      color: var(--ink);
      background: var(--plate);
      padding: 0 4mm 0 calc(var(--line-num-offset) + var(--line-num-width) + 2.6mm);
      overflow: hidden;
      border: none;
      box-shadow: none;
      border-radius: var(--radius-md);
      font-variant-numeric: tabular-nums;
      outline: var(--border-base) solid var(--rule);
      z-index: 2;
    }
    .fallback::before {
      content: none;
    }
    .fallback-title {
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--stamp);
      font-family: var(--font-title);
      font-size: 6.5pt;
      line-height: var(--fallback-line);
      margin: 0;
      padding: 0 1.2mm;
      background: rgba(42, 95, 110, 0.12);
      display: inline-block;
    }
    .fallback-lines {
      position: relative;
      counter-reset: line;
      padding-left: 0;
      padding-top: 0;
      background: none;
    }
    .fallback-line {
      position: relative;
      line-height: var(--fallback-line);
      margin: 0;
      white-space: pre;
    }
    .fallback-line::before {
      counter-increment: line;
      content: counter(line, decimal-leading-zero);
      position: absolute;
      left: calc(-1 * var(--line-num-offset));
      width: var(--line-num-width);
      text-align: right;
      font-size: var(--line-num-size);
      letter-spacing: var(--line-num-letter-spacing);
      color: var(--ink-soft);
    }
  </style>
</head>
<body>
{% for page in pages %}
  <section class="page">
    <div class="header">
      <div class="header-left">
        <div class="title">Shard Document</div>
        <div class="subtitle">Shard {{ shard_index }} of {{ shard_total }}</div>
        <div class="meta-grid">
          <div class="meta-label">Document ID</div>
          <div class="meta-value">{{ doc_id }}</div>
          <div class="meta-label">Page</div>
          <div class="meta-value">{{ page.page_label }}</div>
        </div>
      </div>
      <div class="header-right">
        <div class="stamp-title">Created (UTC)</div>
        <div class="stamp-value">{{ created_timestamp_utc }}</div>
      </div>
    </div>
    <div class="divider" style="top: calc({{ page.divider_y_mm }}mm + var(--divider-y-offset));"></div>

    {% if page.page_num == 1 %}
    <div class="instructions" style="top: calc({{ page.instructions_y_mm }}mm + var(--instructions-y-offset));">
      <div class="instructions-label">Instructions</div>
      <div>
        <div>This document is one shard of the passphrase.</div>
        <div>Keep shards separate and secure.</div>
      </div>
    </div>
    {% endif %}

    {% if page.qr_outline %}
    <div
      class="qr-grid"
      style="left: {{ page.qr_outline.x_mm }}mm; top: calc({{ page.qr_outline.y_mm }}mm + var(--qr-y-offset)); width: {{ page.qr_outline.width_mm }}mm; height: {{ page.qr_outline.height_mm }}mm;"
    ></div>
    {% endif %}

    {% if page.sequence %}
    <svg style="transform: translateY(var(--qr-y-offset));" class="qr-sequence" viewBox="0 0 {{ page_width_mm }} {{ page_height_mm }}">
      {% for line in page.sequence.lines %}
      <line x1="{{ line.x1 }}" y1="{{ line.y1 }}" x2="{{ line.x2 }}" y2="{{ line.y2 }}"></line>
      {% endfor %}
      {% for label in page.sequence.labels %}
      <text x="{{ label.x }}" y="{{ label.y }}" text-anchor="middle" dominant-baseline="central">
        {{ label.text }}
      </text>
      {% endfor %}
    </svg>
    {% endif %}

    {% for slot in page.qr_slots %}
    <div
      class="qr-card"
      style="left: {{ slot.x_mm + 0.8 }}mm; top: calc({{ slot.y_mm + 0.8 }}mm + var(--qr-y-offset)); width: {{ slot.size_mm - 1.6 }}mm; height: {{ slot.size_mm - 1.6 }}mm;"
    >
      <div class="qr-index">{{ "%02d"|format(slot.index) }}</div>
      <img class="qr" src="{{ slot.data_uri }}" alt="QR code {{ slot.index }}">
    </div>
    {% endfor %}

    {% if page.fallback_blocks %}
      {%- for block in page.fallback_blocks %}
      <div
        class="fallback"
        style="top: calc({{ block.y_mm }}mm + var(--fallback-y-offset));"
      >
        {%- if block.title %}
        <div class="fallback-title">{{ block.title }}</div>
        {%- endif %}
        <div class="fallback-lines" style="counter-reset: line {{ block.line_offset | default(0) }};">
          {%- for line in block.lines %}
          <div class="fallback-line">{{ line }}</div>
          {%- endfor %}
        </div>
      </div>
      {%- endfor %}
    {% endif %}
  </section>
{% endfor %}
</body>
</html>
