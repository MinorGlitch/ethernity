<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }
    :root {
      --ink: #0d1a2a;
      --ink-muted: #3b4f66;
      --ink-soft: #60758b;
      --ink-label: #2f4258;
      --accent: #152a45;
      --rail: #0f1f34;
      --paper-top: #eef2f8;
      --paper-bottom: #e0e7f1;
      --plate: #f6f8fb;
      --plate-border: #b7c3d4;
      --rule: #c7d2df;
      --rule-strong: #7e94af;
      --note: #e8edf4;
      --tab: #cbd7e5;
      --pin: #4c6179;
      --stamp: #2d4a6b;
      --font-title: "Cambria", "Didot", "Baskerville", "Georgia", serif;
      --font-body: "Segoe UI", "Calibri", "Trebuchet MS", sans-serif;
      --font-mono: "SFMono-Regular", "Menlo", "Consolas", "Courier New", monospace;
      --divider-y-offset: 7mm;
      --instructions-y-offset: 7mm;
      --keys-y-offset: 7mm;
      --fallback-y-offset: 7mm;
      --qr-y-offset: 7mm;
      --header-pad: 2mm 2.6mm 2.4mm;
      --instructions-pad: 0 3mm;
      --qr-card-pad: 0.8mm;
      --space-1: 1mm;
      --space-2: 1.2mm;
      --space-3: 1.5mm;
      --space-4: 1.6mm;
      --space-5: 2mm;
      --space-6: 3mm;
      --space-7: 4mm;
      --space-8: 5mm;
      --space-9: 6mm;
      --border-hairline: 0.2mm;
      --border-thin: 0.3mm;
      --border-base: 0.35mm;
      --border-strong: 0.4mm;
      --border-heavy: 0.45mm;
      --border-rail: 0.8mm;
      --radius-none: 0;
      --radius-xs: 0.6mm;
      --radius-sm: 0.8mm;
      --radius-md: 1.2mm;
      --radius-lg: 1.4mm;
      --title-size: 15.5pt;
      --subtitle-size: 8pt;
      --meta-size: 7.1pt;
      --meta-label-size: 6pt;
      --meta-value-size: 7.1pt;
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: var(--font-body);
      color: var(--ink);
      background: var(--paper-top);
      print-color-adjust: exact;
      -webkit-print-color-adjust: exact;
    }
    .page {
      position: relative;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      page-break-after: always;
      overflow: hidden;
      background: var(--paper-top);
    }
    .page:last-child {
      page-break-after: auto;
    }
    .header {
      position: absolute;
      left: {{ margin_mm }}mm;
      top: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 1fr 46mm;
      gap: var(--space-8);
      align-items: start;
    }
    .header-left {
      display: grid;
      gap: var(--space-4);
      padding-bottom: 1.2mm;
      border-bottom: var(--border-base) solid var(--rule);
    }
    .title {
      font-size: var(--title-size);
      font-weight: 600;
      font-family: var(--font-title);
      color: var(--ink);
      line-height: 1.1;
      letter-spacing: 0.18em;
      text-transform: uppercase;
    }
    .subtitle {
      font-size: var(--subtitle-size);
      font-style: normal;
      color: var(--ink-muted);
      line-height: 1.2;
      letter-spacing: 0.16em;
      text-transform: uppercase;
    }
    .meta-grid {
      display: grid;
      grid-template-columns: 26mm auto;
      gap: var(--space-1) var(--space-6);
      font-size: var(--meta-size);
      line-height: 1.2;
      align-items: baseline;
    }
    .meta-label {
      font-size: var(--meta-label-size);
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--ink-soft);
      font-family: var(--font-body);
      font-weight: 600;
    }
    .meta-value {
      font-size: var(--meta-value-size);
      letter-spacing: 0.08em;
      color: var(--ink);
      font-family: var(--font-mono);
    }
    .header-right {
      justify-self: end;
      align-self: start;
      border: var(--border-heavy) solid var(--rule-strong);
      border-radius: var(--radius-lg);
      padding: var(--header-pad);
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 0.18em;
      background: linear-gradient(
        180deg,
        rgba(26, 38, 54, 0.14) 0,
        rgba(26, 38, 54, 0.14) 3mm,
        var(--plate) 3mm,
        var(--plate) 100%
      );
      box-shadow: none;
    }
    .stamp-title {
      font-size: 7pt;
      color: var(--stamp);
      font-family: var(--font-title);
    }
    .stamp-value {
      margin-top: var(--space-1);
      font-size: 9pt;
      font-weight: 700;
      color: var(--ink);
      font-family: var(--font-title);
      letter-spacing: 0.12em;
    }
    .divider {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      height: 0.45mm;
      background: repeating-linear-gradient(
        90deg,
        var(--rule-strong) 0,
        var(--rule-strong) 10mm,
        transparent 10mm,
        transparent 14mm
      );
      opacity: 0.75;
    }
    .instructions {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: minmax(26mm, max-content) 1fr;
      column-gap: var(--space-5);
      font-size: 9pt;
      line-height: 4.5mm;
      color: var(--ink);
      background: linear-gradient(
        180deg,
        rgba(26, 38, 54, 0.14) 0,
        rgba(26, 38, 54, 0.14) 3mm,
        var(--plate) 3mm,
        var(--plate) 100%
      );
      border: none;
      border-radius: var(--radius-md);
      padding: 0 3mm;
      box-shadow: none;
      outline: var(--border-strong) solid var(--rule-strong);
      z-index: 2;
    }

.instructions::before {
  content: none;
}
    .instructions-label {
      font-size: 6.2pt;
      font-weight: 700;
      color: #f1f2f4;
      text-transform: uppercase;
      letter-spacing: 0.22em;
      font-family: var(--font-title);
      background: var(--rail);
      padding: 0 1.2mm;
      border-radius: var(--radius-sm);
      justify-self: start;
      align-self: start;
      grid-column: 1;
      grid-row: 1;
    }
    .instructions > div:not(.instructions-label) {
      grid-column: 2;
      grid-row: 1;
    }
    .qr-grid {
      position: absolute;
      border: none;
      border-radius: var(--radius-md);
      overflow: hidden;
      pointer-events: none;
      z-index: 0;
      background: var(--plate);
      box-shadow: none;
      outline: var(--border-strong) solid var(--rule-strong);
    }
    .qr-grid::before {
      content: "";
      position: absolute;
      inset: 2mm;
      border-radius: var(--radius-xs);
      pointer-events: none;
    }
    .qr-grid::after {
      content: "";
      position: absolute;
      inset: 0;
      background:
        repeating-linear-gradient(
          90deg,
          transparent 0,
          transparent 20mm,
          rgba(17, 27, 42, 0.04) 20mm,
          rgba(17, 27, 42, 0.04) 20.2mm
        ),
        repeating-linear-gradient(
          0deg,
          transparent 0,
          transparent 20mm,
          rgba(17, 27, 42, 0.04) 20mm,
          rgba(17, 27, 42, 0.04) 20.2mm
        );
      opacity: 0.22;
      pointer-events: none;
    }
    .qr-grid-items {
      position: absolute;
      display: grid;
      grid-template-columns: repeat(var(--qr-cols), var(--qr-size));
      grid-auto-rows: var(--qr-size);
      column-gap: var(--qr-gap-x);
      row-gap: var(--qr-gap-y);
      z-index: 1;
    }
    .qr-cell {
      width: var(--qr-size);
      height: var(--qr-size);
      padding: var(--qr-card-pad);
      box-sizing: border-box;
    }
    .qr-sequence {
      position: absolute;
      left: 0;
      top: 0;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      pointer-events: none;
      z-index: 0;
    }
    .qr-sequence line {
      stroke: var(--ink-soft);
      stroke-width: 0.25mm;
      stroke-dasharray: 1.6mm 1.2mm;
      opacity: 0.5;
    }
    .qr-sequence text {
      fill: var(--ink-soft);
      font-size: 6.5pt;
      font-family: var(--font-mono);
      letter-spacing: 0.1em;
    }
    .qr-card {
      position: relative;
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      z-index: 1;
    }
    .qr-index {
      position: absolute;
      top: var(--qr-card-pad);
      left: var(--qr-card-pad);
      transform: translate(-3mm, -5mm);
      font-size: 6pt;
      font-family: var(--font-mono);
      letter-spacing: 0.08em;
      color: #f1f2f4;
      background: var(--rail);
      border: 0;
      padding: 0.2mm 0.8mm;
      border-radius: var(--radius-sm);
    }
    .qr {
      width: 100%;
      height: 100%;
      display: block;
      image-rendering: pixelated;
      box-sizing: border-box;
      padding: 0.4mm;
      background: #ffffff;
    }
  </style>
</head>
<body>
{% for page in pages %}
  <section class="page">
    <div class="header">
      <div class="header-left">
        <div class="title">Main Document</div>
        <div class="meta-grid">
          <div class="meta-label">Document ID</div>
          <div class="meta-value">{{ doc_id }}</div>
          <div class="meta-label">Page</div>
          <div class="meta-value">{{ page.page_label }}</div>
        </div>
      </div>
      <div class="header-right">
        <div class="stamp-title">Created (UTC)</div>
        <div class="stamp-value">{{ created_timestamp_utc }}</div>
      </div>
    </div>
    <div class="divider" style="top: calc({{ page.divider_y_mm }}mm + var(--divider-y-offset));"></div>

    {% if page.page_num == 1 %}
    <div class="instructions" style="top: calc({{ page.instructions_y_mm }}mm + var(--instructions-y-offset));">
      <div class="instructions-label">Instructions</div>
      <div>
        <div>Scan all QR codes in any order.</div>
        <div>Use the Recovery Document for text fallback if needed.</div>
      </div>
    </div>
    {% endif %}

    {% if page.qr_outline %}
    <div
      class="qr-grid"
      style="left: {{ page.qr_outline.x_mm }}mm; top: calc({{ page.qr_outline.y_mm }}mm + var(--qr-y-offset)); width: {{ page.qr_outline.width_mm }}mm; height: {{ page.qr_outline.height_mm }}mm;"
    ></div>
    {% endif %}

    {% if page.sequence %}
    <svg style="transform: translateY(var(--qr-y-offset));" class="qr-sequence" viewBox="0 0 {{ page_width_mm }} {{ page_height_mm }}">
      {% for line in page.sequence.lines %}
      <line x1="{{ line.x1 }}" y1="{{ line.y1 }}" x2="{{ line.x2 }}" y2="{{ line.y2 }}"></line>
      {% endfor %}
      {% for label in page.sequence.labels %}
      <text x="{{ label.x }}" y="{{ label.y }}" text-anchor="middle" dominant-baseline="central">
        {{ label.text }}
      </text>
      {% endfor %}
    </svg>
    {% endif %}

    {% if page.qr_items and page.qr_grid %}
    <div
      class="qr-grid-items"
      style="left: {{ page.qr_grid.x_mm }}mm; top: calc({{ page.qr_grid.y_mm }}mm + var(--qr-y-offset)); --qr-size: {{ page.qr_grid.size_mm }}mm; --qr-gap-x: {{ page.qr_grid.gap_x_mm }}mm; --qr-gap-y: {{ page.qr_grid.gap_y_mm }}mm; --qr-cols: {{ page.qr_grid.cols }};"
    >
      {% for slot in page.qr_items %}
      <div class="qr-cell">
        <div class="qr-card">
          <div class="qr-index">{{ "%02d"|format(slot.index) }}</div>
          <img class="qr" src="{{ slot.data_uri }}" alt="QR code {{ slot.index }}">
        </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </section>
{% endfor %}
</body>
</html>
