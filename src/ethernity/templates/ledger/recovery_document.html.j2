<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }
    :root {
      --ink: #0b1a26;
      --ink-muted: #2f4352;
      --ink-soft: #516272;
      --ink-label: #3b4e5c;
      --ink-body: #1a2733;
      --accent: #2b3f46;
      --rail: #2b3f46;
      --panel: #f2eee6;
      --panel-strong: #e2dbce;
      --panel-border: #bbae9c;
      --paper-top: #fbf6ef;
      --paper-bottom: #ece2d5;
      --grid: rgba(11, 26, 38, 0.06);
      --qr-border: #b1a494;
      --shadow: rgba(11, 26, 38, 0.16);
      --instructions-gap: 4mm;
      --content-gap: 20mm;
      --first-page-offset: 20mm;
      --font-title: "Copperplate Gothic Bold", "Copperplate Gothic Light", "Copperplate", "Palatino Linotype", "Palatino", serif;
      --font-body: "Lucida Sans", "Lucida Grande", "Trebuchet MS", sans-serif;
      --font-mono: "SFMono-Regular", "Menlo", "Consolas", "Courier New", monospace;
      --header-pad: 0.6mm 2mm;
      --instructions-pad: 1.6mm 2.5mm 1.6mm 3mm;
      --fallback-pad: 0 5.5mm;
      --line-num-offset: 5.5mm;
      --line-num-width: 4.8mm;
      --space-1: 1mm;
      --space-2: 1.2mm;
      --space-3: 1.5mm;
      --space-4: 1.6mm;
      --space-5: 2mm;
      --space-6: 3mm;
      --space-7: 4mm;
      --space-8: 6mm;
      --border-thin: 0.35mm;
      --border-strong: 0.4mm;
      --border-heavy: 0.45mm;
      --border-rail-thin: 1.2mm;
      --border-rail: 1.6mm;
      --border-accent: 2mm;
      --radius-none: 0;
      --title-size: 18pt;
      --subtitle-size: 9pt;
      --meta-size: 7pt;
      --meta-secondary-size: 8pt;
      --meta-tertiary-size: 7.5pt;
      --fallback-font-size: 9.4pt;
      --fallback-line: 4.2mm;
      --line-num-size: 6pt;
      --line-num-letter-spacing: 0.06em;
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: var(--font-body);
      color: var(--ink);
      background: var(--paper-top);
      print-color-adjust: exact;
      -webkit-print-color-adjust: exact;
    }
    .page {
      position: relative;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      page-break-after: always;
      overflow: hidden;
      background: var(--paper-top);
    }
    .page:last-child {
      page-break-after: auto;
    }
    .header {
      position: absolute;
      left: {{ margin_mm }}mm;
      top: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 1fr auto;
      gap: var(--space-8);
      align-items: start;
    }
    .header-left {
      width: 100%;
    }
    .header-right {
      display: grid;
      gap: var(--space-2);
      justify-items: end;
      align-self: start;
      text-align: right;
      font-size: var(--meta-size);
      color: var(--ink-soft);
      line-height: 1.2;
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }
    .header-right div {
      padding: var(--header-pad);
      border-radius: var(--radius-none);
      border: var(--border-thin) solid var(--panel-border);
      background: #ffffff;
    }
    .header-right .meta-primary {
      font-weight: 700;
      color: var(--accent);
      border-color: var(--accent);
    }
    .header-right .meta-secondary,
    .header-right .meta-tertiary {
      font-family: var(--font-mono);
      color: var(--ink);
      text-transform: none;
      letter-spacing: 0.04em;
    }
    .header-right .meta-secondary {
      font-size: var(--meta-secondary-size);
    }
    .header-right .meta-tertiary {
      font-size: var(--meta-tertiary-size);
    }
    .title {
      font-size: var(--title-size);
      font-weight: 700;
      font-family: var(--font-title);
      color: var(--ink);
      line-height: 1.1;
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }
    .subtitle {
      font-size: var(--subtitle-size);
      font-style: normal;
      color: var(--ink-muted);
      line-height: 1.2;
      letter-spacing: 0.1em;
      text-transform: uppercase;
    }
    .divider {
      width: 100%;
      height: 0.6mm;
      background: repeating-linear-gradient(
        90deg,
        var(--accent) 0,
        var(--accent) 8mm,
        transparent 8mm,
        transparent 11mm
      );
      opacity: 0.9;
    }
    .content {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      bottom: {{ margin_mm }}mm;
      display: flex;
      flex-direction: column;
    }
    .content.first-page {
      padding-top: var(--first-page-offset);
    }
    .fallback-stack {
      display: flex;
      flex-direction: column;
      flex: 1;
      min-height: 0;
      margin-top: var(--content-gap);
    }
    .fallback-stack.has-instructions {
      margin-top: var(--instructions-gap);
    }
    .fallback.main-fallback {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    .fallback.main-fallback .fallback-lines {
      flex: 1;
      min-height: 0;
    }
    .instructions {
      display: grid;
      grid-template-columns: 28mm auto;
      column-gap: var(--space-5);
      background: linear-gradient(
        90deg,
        rgba(47, 58, 51, 0.06) 0,
        rgba(255, 255, 255, 0) 70%
      );
      border-left: var(--border-rail) solid var(--accent);
      border-top: var(--border-thin) solid var(--panel-border);
      border-bottom: var(--border-thin) solid var(--panel-border);
      border-radius: var(--radius-none);
      padding: var(--instructions-pad);
      box-shadow: none;
    }
    .instructions {
      font-size: 9pt;
      line-height: 4.5mm;
      color: var(--ink-body);
    }
    .instructions-label {
      font-size: 7pt;
      font-weight: 700;
      color: var(--ink-label);
      text-transform: uppercase;
      letter-spacing: 0.12em;
      font-family: var(--font-title);
    }
    .fallback {
      position: relative;
      width: 100%;
      font-family: "Courier", "Courier New", monospace;
      font-size: var(--fallback-font-size);
      line-height: var(--fallback-line);
      letter-spacing: 0;
      font-kerning: none;
      font-variant-ligatures: none;
      font-feature-settings: "liga" 0, "calt" 0;
      color: var(--ink);
      background: #ffffff;
      padding: var(--fallback-pad);
      overflow: hidden;
      border: var(--border-thin) solid var(--panel-border);
      border-left: var(--border-rail) solid var(--accent);
      box-shadow: none;
      border-radius: var(--radius-none);
      font-variant-numeric: tabular-nums;
    }
    .fallback-title {
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      color: var(--ink-muted);
      font-family: var(--font-title);
      line-height: var(--fallback-line);
      margin: 0;
      padding: 0;
      box-shadow: none;
    }
    .fallback-lines {
      position: relative;
      counter-reset: line;
      padding-left: 0;
      padding-top: 0;
      background: none;
    }
    .fallback-line {
      position: relative;
      line-height: var(--fallback-line);
      margin: 0;
      white-space: pre;
    }
    .fallback-line::before {
      counter-increment: line;
      content: counter(line, decimal-leading-zero);
      position: absolute;
      left: calc(-1 * var(--line-num-offset));
      width: var(--line-num-width);
      text-align: right;
      font-size: var(--line-num-size);
      letter-spacing: var(--line-num-letter-spacing);
      color: var(--ink-soft);
    }
  </style>
</head>
<body>
{% set fallback_line_height_mm = 4.2 %}
{% set auth_fallback_title = "Auth Frame" %}
{% set auth_fallback_offset_mm = -2.0 %}
{% set main_fallback_title = "Main Frame" %}
{% set signing_pub_label = "Signing public key (hex):" %}
{% set quorum_prefix = "Recover with " %}
{% set quorum_suffix = " shard documents." %}
{% set key_extract = namespace(pub_lines=[], collecting_pub=false, quorum_line="") %}
{% for line in keys.lines %}
  {% if line == signing_pub_label %}
    {% set key_extract.collecting_pub = true %}
  {% elif key_extract.collecting_pub and line.startswith("Signing private key") %}
    {% set key_extract.collecting_pub = false %}
  {% elif line.startswith(quorum_prefix) and line.endswith(quorum_suffix) %}
    {% set key_extract.quorum_line = line %}
  {% elif key_extract.collecting_pub %}
    {% set key_extract.pub_lines = key_extract.pub_lines + [line] %}
  {% endif %}
{% endfor %}
{% set quorum_value = key_extract.quorum_line.replace(quorum_prefix, "").replace(quorum_suffix, "") if key_extract.quorum_line else "" %}
{% for page in pages %}
{% set divider_y_mm = page.divider_y_mm %}
  <section class="page">
    <div class="header">
      <div class="header-left">
        <div class="title">Recovery Document</div>
        <div class="subtitle">Keys + Text Fallback</div>
      </div>
      <div class="header-right">
        <div class="meta-primary">{{ page.page_label }}</div>
        <div class="meta-secondary">Document ID: {{ doc_id }}</div>
        {% if key_extract.quorum_line %}
        <div class="meta-secondary">Shard Quorum: {{ quorum_value }}</div>
        {% endif %}
        {% if key_extract.pub_lines %}
        <div class="meta-secondary">Signing Pub Key: {{ key_extract.pub_lines | join(" ") }}</div>
        {% endif %}
        <div class="meta-tertiary">Created (UTC): {{ created_timestamp_utc }}</div>
      </div>
    </div>
    <div class="content{% if page.page_num == 1 %} first-page{% endif %}" style="top: {{ divider_y_mm }}mm;">
      <div class="divider"></div>

      {% if page.page_num == 1 %}
      <div class="instructions">
        <div class="instructions-label">Instructions</div>
        <div>
          <div>This document contains recovery keys and full text fallback.</div>
          <div>Keep it separate from the QR document.</div>
          <div>Fallback includes AUTH + MAIN sections; keep the labels when transcribing.</div>
        </div>
      </div>
      {% endif %}

      {% if page.fallback_blocks %}
      <div class="fallback-stack{% if page.page_num == 1 %} has-instructions{% endif %}">
        {%- for block in page.fallback_blocks %}
        {% set gap_mm = (block.gap_lines | default(0)) * fallback_line_height_mm %}
        {% set block_offset_mm = gap_mm + (auth_fallback_offset_mm if block.title == auth_fallback_title else 0.0) %}
        {% set is_main_block = block.section_title == main_fallback_title %}
        <div
          class="fallback{% if is_main_block %} main-fallback{% endif %}"
          style="margin-top: {{ block_offset_mm }}mm;"
        >
          {%- if block.title %}
          <div class="fallback-title">{{ block.title }}</div>
          {%- endif %}
          <div class="fallback-lines" style="counter-reset: line {{ block.line_offset | default(0) }};">
            {%- for line in block.lines %}
            <div class="fallback-line">{{ line }}</div>
            {%- endfor %}
          </div>
        </div>
        {%- endfor %}
      </div>
      {% endif %}
    </div>
  </section>
{% endfor %}
</body>
</html>
