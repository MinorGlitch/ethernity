{% from 'css_base.j2' import reset_styles, page_styles, qr_grid_items_styles, qr_image_styles %}
{% from 'css_variables.j2' import common_variables %}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }
    :root {
      /* Theme-specific colors */
      --ink: #0b1a26;
      --ink-muted: #2f4352;
      --ink-soft: #516272;
      --ink-label: #3b4e5c;
      --ink-body: #1a2733;
      --accent: #2b3f46;
      --rail: #2b3f46;
      --surface: #f2eee6;
      --surface-strong: #e2dbce;
      --surface-border: #bbae9c;
      --paper-top: #fbf6ef;
      --paper-bottom: #ece2d5;
      --grid: rgba(11, 26, 38, 0.06);
      --qr-border: #b1a494;
      --shadow: rgba(11, 26, 38, 0.16);

      /* Theme-specific fonts */
      --font-title: "Copperplate Gothic Bold", "Copperplate Gothic Light", "Copperplate", "Palatino Linotype", "Palatino", serif;
      --font-body: "Lucida Sans", "Lucida Grande", "Trebuchet MS", sans-serif;
      --font-mono: "SFMono-Regular", "Menlo", "Consolas", "Courier New", monospace;

      /* Theme-specific sizes */
      --header-pad: 0.6mm 2mm;
      --instructions-pad: 1.6mm 2.5mm 1.6mm 3mm;
      --qr-card-pad: 0.6mm;
      --fallback-pad: 0 5.5mm;
      --line-num-offset: 5.5mm;
      --line-num-width: 4.8mm;
      --title-size: 18pt;
      --subtitle-size: 9pt;
      --meta-size: 7pt;
      --meta-secondary-size: 8pt;
      --meta-tertiary-size: 7.5pt;
      --fallback-font-size: 9.4pt;
      --fallback-line: 4.2mm;
      --line-num-size: 6pt;
      --line-num-letter-spacing: 0.06em;

      /* Ledger overrides */
      --space-8: 6mm;
      --border-thin: 0.35mm;
      --border-rail-thin: 1.2mm;
      --border-accent: 2mm;

{{ common_variables() }}
    }
{{ reset_styles() }}
{{ page_styles(page_width_mm, page_height_mm) }}
    .header {
      position: absolute;
      left: {{ margin_mm }}mm;
      top: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 1fr auto;
      gap: var(--space-8);
      align-items: start;
    }
    .header-left {
      width: 100%;
    }
    .header-right {
      display: grid;
      gap: var(--space-2);
      justify-items: end;
      text-align: right;
      font-size: var(--meta-size);
      color: var(--ink-soft);
      line-height: 1.2;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      align-self: start;
    }
    .header-right div {
      padding: var(--header-pad);
      border-radius: var(--radius-none);
      border: var(--border-thin) solid var(--surface-border);
      background: var(--white, #ffffff);
    }
    .header-right .meta-primary {
      font-weight: 700;
      color: var(--accent);
      border-color: var(--accent);
    }
    .header-right .meta-secondary,
    .header-right .meta-tertiary {
      font-family: var(--font-mono);
      color: var(--ink);
      text-transform: none;
      letter-spacing: 0.04em;
    }
    .header-right .meta-secondary {
      font-size: var(--meta-secondary-size);
    }
    .header-right .meta-tertiary {
      font-size: var(--meta-tertiary-size);
    }
    .title {
      font-size: var(--title-size);
      font-weight: 700;
      font-family: var(--font-title);
      color: var(--ink);
      line-height: 1.1;
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }
    .subtitle {
      font-size: var(--subtitle-size);
      font-style: normal;
      color: var(--ink-muted);
      line-height: 1.2;
      letter-spacing: 0.1em;
      text-transform: uppercase;
    }
    .divider {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      height: 0.6mm;
      background: repeating-linear-gradient(
        90deg,
        var(--accent) 0,
        var(--accent) 8mm,
        transparent 8mm,
        transparent 11mm
      );
      opacity: 0.9;
    }
    .instructions {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 28mm auto;
      column-gap: var(--space-5);
      font-size: 9pt;
      line-height: 4.5mm;
      color: var(--ink-body);
      background: linear-gradient(
        90deg,
        rgba(47, 58, 51, 0.06) 0,
        rgba(255, 255, 255, 0) 70%
      );
      border-left: var(--border-rail) solid var(--accent);
      border-top: var(--border-thin) solid var(--surface-border);
      border-bottom: var(--border-thin) solid var(--surface-border);
      border-radius: var(--radius-none);
      padding: 1.6mm 2.5mm 1.6mm 3mm;
      box-shadow: none;
    }
    .instructions-label {
      font-size: 7pt;
      font-weight: 700;
      color: var(--ink-label);
      text-transform: uppercase;
      letter-spacing: 0.12em;
      font-family: var(--font-title);
    }
    .qr-grid {
      position: absolute;
      border: var(--border-strong) solid var(--qr-border);
      border-radius: var(--radius-none);
      pointer-events: none;
      z-index: 0;
      background: var(--white, #ffffff);
      box-shadow: none;
    }
{{ qr_grid_items_styles() }}
    .qr-card {
      position: relative;
      width: 100%;
      height: 100%;
      border: var(--border-thin) solid var(--qr-border);
      border-radius: var(--radius-none);
      background: var(--white, #ffffff);
      box-shadow: none;
      padding: var(--qr-card-pad);
      box-sizing: border-box;
    }
{{ qr_image_styles() }}
    .fallback {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ fallback.width_mm }}mm;
      font-family: "Courier", "Courier New", monospace;
      font-size: 9.4pt;
      line-height: var(--fallback-line);
      letter-spacing: 0;
      font-kerning: none;
      font-variant-ligatures: none;
      font-feature-settings: "liga" 0, "calt" 0;
      color: var(--ink);
      background: var(--white, #ffffff);
      padding: 0 5.5mm;
      overflow: hidden;
      border: var(--border-thin) solid var(--surface-border);
      border-left: var(--border-rail) solid var(--accent);
      box-shadow: none;
      border-radius: var(--radius-none);
      font-variant-numeric: tabular-nums;
    }
    .fallback-title {
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      color: var(--ink-muted);
      font-family: var(--font-title);
      line-height: var(--fallback-line);
      margin: 0;
      padding: 0;
      box-shadow: none;
    }
    .fallback-lines {
      position: relative;
      counter-reset: line;
      padding-left: 0;
      padding-top: 0;
      background: none;
    }
    .fallback-line {
      position: relative;
      line-height: var(--fallback-line);
      margin: 0;
      white-space: pre;
    }
    .fallback-line::before {
      counter-increment: line;
      content: counter(line, decimal-leading-zero);
      position: absolute;
      left: calc(-1 * var(--line-num-offset));
      width: var(--line-num-width);
      text-align: right;
      font-size: var(--line-num-size);
      letter-spacing: var(--line-num-letter-spacing);
      color: var(--ink-soft);
    }
  </style>
</head>
<body>
{% for page in pages %}
  <section class="page">
    <div class="header">
      <div class="header-left">
        <div class="title">Signing Key Shard</div>
        <div class="subtitle">Signing key shard {{ shard_index }} of {{ shard_total }}</div>
      </div>
      <div class="header-right">
        <div class="meta-primary">{{ page.page_label }}</div>
        <div class="meta-secondary">Document ID: {{ doc_id }}</div>
        <div class="meta-tertiary">Created (UTC): {{ created_timestamp_utc }}</div>
      </div>
    </div>
    <div class="divider" style="top: calc({{ page.divider_y_mm }}mm + var(--divider-y-offset));"></div>

    {% if page.page_num == 1 %}
    <div class="instructions" style="top: calc({{ page.instructions_y_mm }}mm + var(--instructions-y-offset));">
      <div class="instructions-label">Instructions</div>
      <div>
        <div>This document is one shard of the signing key.</div>
        <div>Keep signing-key shards separate and secure.</div>
      </div>
    </div>
    {% endif %}

    {% if page.qr_outline %}
    <div
      class="qr-grid"
      style="left: {{ page.qr_outline.x_mm }}mm; top: calc({{ page.qr_outline.y_mm }}mm + var(--qr-y-offset)); width: {{ page.qr_outline.width_mm }}mm; height: {{ page.qr_outline.height_mm }}mm;"
    ></div>
    {% endif %}

    {% if page.qr_items and page.qr_grid %}
    <div
      class="qr-grid-items"
      style="left: {{ page.qr_grid.x_mm }}mm; top: calc({{ page.qr_grid.y_mm }}mm + var(--qr-y-offset)); --qr-size: {{ page.qr_grid.size_mm }}mm; --qr-gap-x: {{ page.qr_grid.gap_x_mm }}mm; --qr-gap-y: {{ page.qr_grid.gap_y_mm }}mm; --qr-cols: {{ page.qr_grid.cols }};"
    >
      {% for slot in page.qr_items %}
      <div class="qr-cell">
        <div class="qr-card">
          <img class="qr" src="{{ slot.data_uri }}" alt="QR code {{ slot.index }}">
        </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}

    {% if page.fallback_blocks %}
      {%- for block in page.fallback_blocks %}
      <div
        class="fallback"
        style="top: calc({{ block.y_mm }}mm + var(--fallback-y-offset)); height: {{ block.height_mm }}mm;"
      >
        {%- if block.title %}
        <div class="fallback-title">{{ block.title }}</div>
        {%- endif %}
        <div class="fallback-lines" style="counter-reset: line {{ block.line_offset | default(0) }};">
          {%- for line in block.lines %}
          <div class="fallback-line">{{ line }}</div>
          {%- endfor %}
        </div>
      </div>
      {%- endfor %}
    {% endif %}
  </section>
{% endfor %}
</body>
</html>
