{% from 'css_variables.j2' import common_variables %}
{% from 'html_components.j2' import instructions_lines %}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }

    :root {
{{ common_variables() }}
      --bg: #f3f4f6;
      --paper: #ffffff;
      --ink: #111418;
      --muted: #6b7280;
      --rule: #d1d5db;
      --panel: #f9fafb;
      --accent: #1763cf;
      --warn-bg: #fef2f2;
      --warn-border: #ef4444;
      --font-display: "Inter", "Segoe UI", sans-serif;
      --font-mono: "JetBrains Mono", "SFMono-Regular", Menlo, Consolas, monospace;
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      background: var(--bg);
      color: var(--ink);
      font-family: var(--font-display);
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }

    .page {
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      page-break-after: always;
      background: var(--paper);
      border: 0.26mm solid #e5e7eb;
      padding: {{ margin_mm }}mm;
      display: flex;
      flex-direction: column;
      gap: 2mm;
      overflow: hidden;
    }

    .page:last-child { page-break-after: auto; }

    .doc {
      flex: 1 1 auto;
      min-height: 0;
      display: flex;
      flex-direction: column;
      gap: 1.9mm;
    }

    .header {
      border-bottom: 0.58mm solid #111827;
      padding-bottom: 1.7mm;
      display: grid;
      gap: 1.3mm;
    }

    .header-top {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 4mm;
    }

    .title {
      margin: 0;
      font-size: 14.8pt;
      line-height: 1.02;
      text-transform: uppercase;
      font-weight: 900;
      letter-spacing: 0.01em;
    }

    .subtitle {
      margin-top: 0.7mm;
      font-size: 6.8pt;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      color: #6b7280;
      font-weight: 700;
    }

    .lock {
      width: 8mm;
      height: 8mm;
      border: 0.24mm solid #d1d5db;
      background: #f3f4f6;
      border-radius: 0.8mm;
      position: relative;
      flex: 0 0 auto;
    }

    .lock::before {
      content: "";
      position: absolute;
      left: 2.2mm;
      top: 1.4mm;
      width: 3.4mm;
      height: 2.7mm;
      border: 0.22mm solid #9ca3af;
      border-bottom: none;
      border-radius: 1.7mm 1.7mm 0 0;
    }

    .lock::after {
      content: "";
      position: absolute;
      left: 2.3mm;
      top: 3.9mm;
      width: 3.2mm;
      height: 2.8mm;
      background: #9ca3af;
      border-radius: 0.45mm;
    }

    .meta-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 1.1mm;
      border-top: 0.2mm solid #e5e7eb;
      padding-top: 1mm;
    }

    .meta-item {
      display: grid;
      gap: 0.35mm;
      min-height: 8mm;
      align-content: start;
    }

    .meta-k {
      font-size: 5.6pt;
      text-transform: uppercase;
      letter-spacing: 0.11em;
      color: #9ca3af;
      font-weight: 800;
      line-height: 1;
    }

    .meta-v {
      font-family: var(--font-mono);
      font-size: 6.7pt;
      color: #111827;
      font-weight: 700;
      line-height: 1.22;
      word-break: break-word;
    }

    .meta-mid { text-align: center; }
    .meta-right { text-align: right; }

    .instructions {
      border: 0.22mm solid #d1d5db;
      border-left: 1.1mm solid var(--accent);
      background: var(--panel);
      padding: 1.25mm 1.9mm;
      display: grid;
      grid-template-columns: 24mm 1fr;
      gap: 2.5mm;
      font-size: 7.5pt;
      line-height: 1.38;
    }

    .instructions-label {
      font-size: 5.8pt;
      text-transform: uppercase;
      letter-spacing: 0.11em;
      color: #64748b;
      font-weight: 800;
    }

    .instructions-full {
      border: 0.22mm solid #d1d5db;
      border-left: 1.1mm solid var(--accent);
      background: var(--panel);
      padding: 2.1mm 2.7mm;
      display: grid;
      gap: 1.1mm;
      font-size: 8.5pt;
      line-height: 1.45;
    }

    .instructions-full-label {
      font-size: 6pt;
      text-transform: uppercase;
      letter-spacing: 0.11em;
      color: #64748b;
      font-weight: 800;
    }

    .content {
      flex: 1 1 auto;
      min-height: 0;
      display: flex;
      flex-direction: column;
      gap: 1.6mm;
    }

    .step {
      display: grid;
      gap: 0.7mm;
      border: 0.2mm solid #e5e7eb;
      background: #fff;
      padding: 1.2mm 1.7mm;
    }

    .step-head {
      display: flex;
      align-items: center;
      gap: 1.2mm;
      margin: 0;
    }

    .step-index {
      width: 4.6mm;
      height: 4.6mm;
      border-radius: 0.5mm;
      background: rgba(23, 99, 207, 0.1);
      color: var(--accent);
      font-size: 6pt;
      font-weight: 800;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-family: var(--font-mono);
      flex: 0 0 auto;
    }

    .step-title {
      font-size: 7pt;
      text-transform: uppercase;
      letter-spacing: 0.09em;
      color: var(--accent);
      font-weight: 800;
    }

    .step-body {
      font-size: 6.9pt;
      line-height: 1.35;
      color: #374151;
      display: grid;
      gap: 0.45mm;
    }

    .warn-box {
      border-left: 0.9mm solid var(--warn-border);
      background: var(--warn-bg);
      padding: 0.9mm 1.2mm;
      display: grid;
      gap: 0.35mm;
    }

    .warn-title {
      font-size: 5.8pt;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #991b1b;
      font-weight: 800;
    }

    .warn-text {
      font-size: 6.6pt;
      color: #b91c1c;
      line-height: 1.35;
    }

    .qr-grid {
      display: grid;
      grid-template-columns: repeat(var(--qr-cols), var(--qr-size));
      grid-auto-rows: var(--qr-size);
      gap: var(--qr-gap-y) var(--qr-gap-x);
      align-content: start;
      justify-content: start;
    }

    .qr-card {
      width: var(--qr-size);
      height: var(--qr-size);
      border: 0.2mm solid #d1d5db;
      background: #fff;
      padding: 0.8mm;
      display: grid;
      grid-template-rows: auto auto 1fr;
      gap: 0.3mm;
    }

    .qr-label,
    .qr-hint {
      text-align: right;
      font-family: var(--font-mono);
      text-transform: uppercase;
      line-height: 1;
    }

    .qr-label {
      font-size: 5.6pt;
      color: #4b5563;
      letter-spacing: 0.08em;
      font-weight: 700;
    }

    .qr-hint {
      font-size: 5.2pt;
      color: #9ca3af;
      letter-spacing: 0.06em;
    }

    .qr {
      width: 100%;
      height: 100%;
      object-fit: contain;
      image-rendering: pixelated;
      display: block;
    }

    .fallback-list {
      display: grid;
      gap: 0.8mm;
    }

    .fallback {
      border: 0.2mm solid #d1d5db;
      background: #f9fafb;
      padding: 0.75mm 1.5mm;
      font-family: var(--font-mono);
      font-size: 6.7pt;
      line-height: 1.3;
      color: #334155;
    }

    .fallback-title {
      font-family: var(--font-display);
      font-size: 5.7pt;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #6b7280;
      font-weight: 800;
      margin-bottom: 0.3mm;
    }

    .fallback-lines {
      counter-reset: line var(--line-offset, 0);
    }

    .fallback-line {
      position: relative;
      white-space: pre;
      padding-left: 6.2mm;
    }

    .fallback-line::before {
      counter-increment: line;
      content: counter(line, decimal-leading-zero);
      position: absolute;
      left: 0;
      width: 5mm;
      text-align: right;
      color: #9ca3af;
      font-size: 5.5pt;
      letter-spacing: 0.06em;
    }

    .footer {
      margin-top: auto;
      border-top: 0.2mm solid #e5e7eb;
      padding-top: 0.8mm;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      gap: 2mm;
      font-size: 5.6pt;
      color: #9ca3af;
      line-height: 1.3;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }

    .barcode {
      width: 10mm;
      height: 10mm;
      border: 0.2mm solid #d1d5db;
      background: repeating-linear-gradient(
        90deg,
        rgba(15, 23, 42, 0.2) 0,
        rgba(15, 23, 42, 0.2) 0.35mm,
        transparent 0.35mm,
        transparent 0.7mm
      );
      flex: 0 0 auto;
    }
  </style>
</head>
<body>
{% for page in pages %}
  <section class="page">
    <div class="doc">
      <header class="header">
        <div class="header-top">
          <div>
            <h1 class="title">{{ doc.title }}</h1>
            <div class="subtitle">{{ doc.subtitle }}</div>
          </div>
          <div class="lock" aria-hidden="true"></div>
        </div>

        <div class="meta-grid">
          <div class="meta-item">
            <div class="meta-k">Document ID</div>
            <div class="meta-v">{{ doc_id }}</div>
          </div>
          <div class="meta-item meta-mid">
            <div class="meta-k">Created (UTC)</div>
            <div class="meta-v">{{ created_timestamp_utc }}</div>
          </div>
          <div class="meta-item meta-right">
            <div class="meta-k">Page</div>
            <div class="meta-v">{{ page.page_label }}</div>
          </div>
        </div>
      </header>

      {% if page.instructions_full_page %}
        <section class="instructions-full">
          <div class="instructions-full-label">{{ instructions.label }}</div>
          <div>{{ instructions_lines(instructions.lines, scan_hint_text=instructions.scan_hint) }}</div>
        </section>
      {% else %}
        {% if page.show_instructions %}
        <section class="instructions">
          <div class="instructions-label">{{ instructions.label }}</div>
          <div>{{ instructions_lines(instructions.lines, scan_hint_text=instructions.scan_hint) }}</div>
        </section>
        {% endif %}

        <section class="content">
          <section class="step">
            <h3 class="step-head"><span class="step-index">1</span><span class="step-title">Preparation</span></h3>
            <div class="step-body">
              <div>Before initiating recovery, ensure strict physical security protocols are met.</div>
              <div class="warn-box">
                <div class="warn-title">Critical Security Warning</div>
                <div class="warn-text">Operate only on an offline machine. Disconnect network interfaces before processing recovery artifacts.</div>
              </div>
            </div>
          </section>

          {% if page.qr_items and page.qr_grid %}
          <section class="step">
            <h3 class="step-head"><span class="step-index">2</span><span class="step-title">Recovery Kit Payload</span></h3>
            <div
              class="qr-grid"
              style="--qr-size: {{ page.qr_grid.size_mm }}mm; --qr-gap-x: {{ page.qr_grid.gap_x_mm }}mm; --qr-gap-y: {{ page.qr_grid.gap_y_mm }}mm; --qr-cols: {{ page.qr_grid.cols }};"
            >
              {% for slot in page.qr_items %}
              <div class="qr-card">
                <div class="qr-label">Part {{ "%02d"|format(slot.index) }}</div>
                <div class="qr-hint">Kit Segment</div>
                <img class="qr" src="{{ slot.data_uri }}" alt="QR code {{ slot.index }}">
              </div>
              {% endfor %}
            </div>
          </section>
          {% endif %}

          {% if page.fallback_blocks %}
          <section class="step">
            <h3 class="step-head"><span class="step-index">3</span><span class="step-title">Troubleshooting Blocks</span></h3>
            <div class="fallback-list">
              {% for block in page.fallback_blocks %}
              <div class="fallback">
                {% if block.title %}<div class="fallback-title">{{ block.title }}</div>{% endif %}
                <div class="fallback-lines" style="--line-offset: {{ block.line_offset }};">
                  {% for line in block.lines %}
                  <div class="fallback-line">{{ line }}</div>
                  {% endfor %}
                </div>
              </div>
              {% endfor %}
            </div>
          </section>
          {% endif %}
        </section>
      {% endif %}

      <footer class="footer">
        <div>
          <div>Confidential - internal use only</div>
          <div>Generated by Security Vault System v4.2.1</div>
        </div>
        <div class="barcode"></div>
      </footer>
    </div>
  </section>
{% endfor %}
</body>
</html>
