{% from 'css_variables.j2' import common_variables %}
{% from 'html_components.j2' import instructions_lines %}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }

    :root {
{{ common_variables() }}
      --bg: #f0f2f5;
      --paper: #ffffff;
      --ink: #111418;
      --muted: #6b7280;
      --rule: #d1d5db;
      --accent: #1763cf;
      --panel: #f9fafb;
      --font-display: "Inter", "Segoe UI", sans-serif;
      --font-mono: "JetBrains Mono", "SFMono-Regular", Menlo, Consolas, monospace;
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      background: var(--bg);
      color: var(--ink);
      font-family: var(--font-display);
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }

    .page {
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      page-break-after: always;
      background: var(--paper);
      border: 0.26mm solid #e5e7eb;
      padding: {{ margin_mm }}mm;
      display: flex;
      flex-direction: column;
      gap: 2mm;
      overflow: hidden;
    }

    .page:last-child { page-break-after: auto; }

    .doc {
      flex: 1 1 auto;
      min-height: 0;
      display: flex;
      flex-direction: column;
      gap: 1.9mm;
    }

    .header {
      border-bottom: 0.54mm solid #000;
      padding-bottom: 1.7mm;
      display: grid;
      gap: 1.3mm;
    }

    .top {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 4mm;
    }

    .class-line {
      display: flex;
      align-items: center;
      gap: 1.2mm;
      color: #6b7280;
      font-size: 6.1pt;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      font-weight: 800;
      margin-bottom: 0.5mm;
    }

    .class-line::before {
      content: "";
      width: 2mm;
      height: 2mm;
      border-radius: 999px;
      background: #111827;
      flex: 0 0 auto;
    }

    .title {
      margin: 0;
      font-size: 14.6pt;
      line-height: 1.03;
      text-transform: uppercase;
      font-weight: 900;
      letter-spacing: 0.01em;
    }

    .subtitle {
      margin-top: 0.7mm;
      font-size: 7pt;
      color: #4b5563;
      font-weight: 600;
    }

    .badge-col {
      text-align: right;
      display: grid;
      gap: 0.5mm;
    }

    .badge {
      justify-self: end;
      background: #000;
      color: #fff;
      border: 0.2mm solid #000;
      padding: 0.8mm 1.8mm;
      font-family: var(--font-mono);
      font-size: 6.8pt;
      text-transform: uppercase;
      letter-spacing: 0.09em;
      font-weight: 800;
      white-space: nowrap;
    }

    .master-ref {
      font-family: var(--font-mono);
      font-size: 5.8pt;
      color: #6b7280;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-weight: 700;
    }

    .meta-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 1mm;
    }

    .meta-item {
      border-top: 0.18mm solid #d1d5db;
      padding-top: 0.8mm;
      display: grid;
      gap: 0.35mm;
      align-content: start;
      min-height: 8.2mm;
    }

    .meta-k {
      font-size: 5.6pt;
      text-transform: uppercase;
      letter-spacing: 0.11em;
      color: #6b7280;
      font-weight: 800;
      line-height: 1;
    }

    .meta-v {
      font-family: var(--font-mono);
      font-size: 6.7pt;
      color: #111827;
      font-weight: 700;
      line-height: 1.22;
      word-break: break-word;
    }

    .instructions {
      border: 0.22mm solid #d1d5db;
      border-left: 1.1mm solid var(--accent);
      background: var(--panel);
      padding: 1.25mm 1.9mm;
      display: grid;
      grid-template-columns: 25mm 1fr;
      gap: 2.6mm;
      font-size: 7.5pt;
      line-height: 1.38;
    }

    .instructions-label {
      font-size: 5.8pt;
      text-transform: uppercase;
      letter-spacing: 0.11em;
      color: #64748b;
      font-weight: 800;
    }

    .instructions-full {
      border: 0.22mm solid #d1d5db;
      border-left: 1.1mm solid var(--accent);
      background: var(--panel);
      padding: 2.1mm 2.7mm;
      display: grid;
      gap: 0.8mm;
      font-size: 8.5pt;
      line-height: 1.45;
    }

    .instructions-full-label {
      font-size: 6pt;
      text-transform: uppercase;
      letter-spacing: 0.11em;
      color: #64748b;
      font-weight: 800;
    }

    .content {
      flex: 1 1 auto;
      min-height: 0;
      display: flex;
      flex-direction: column;
      gap: 1.8mm;
      align-items: stretch;
    }

    .qr-wrap {
      display: grid;
      gap: 0.9mm;
      justify-items: center;
    }

    .single-qr {
      width: min(66mm, 100%);
      aspect-ratio: 1 / 1;
      border: 0.5mm solid #000;
      padding: 2.2mm;
      background: #fff;
      position: relative;
      display: grid;
      place-items: center;
    }

    .single-qr::before,
    .single-qr::after,
    .single-qr .corner-bl,
    .single-qr .corner-br {
      content: "";
      position: absolute;
      width: 4.3mm;
      height: 4.3mm;
      border-top: 0.5mm solid #000;
      border-left: 0.5mm solid #000;
    }

    .single-qr::before {
      top: -0.8mm;
      left: -0.8mm;
    }

    .single-qr::after {
      top: -0.8mm;
      right: -0.8mm;
      border-left: none;
      border-right: 0.5mm solid #000;
    }

    .single-qr .corner-bl,
    .single-qr .corner-br {
      bottom: -0.8mm;
      border-top: none;
      border-bottom: 0.5mm solid #000;
    }

    .single-qr .corner-bl {
      left: -0.8mm;
    }

    .single-qr .corner-br {
      right: -0.8mm;
      border-left: none;
      border-right: 0.5mm solid #000;
    }

    .single-qr .qr {
      width: 100%;
      height: 100%;
      object-fit: contain;
      image-rendering: pixelated;
      display: block;
    }

    .qr-grid {
      display: grid;
      grid-template-columns: repeat(var(--qr-cols), var(--qr-size));
      grid-auto-rows: var(--qr-size);
      gap: var(--qr-gap-y) var(--qr-gap-x);
      align-content: start;
      justify-content: start;
    }

    .qr-card {
      width: var(--qr-size);
      height: var(--qr-size);
      border: 0.2mm solid #d1d5db;
      background: #fff;
      padding: 0.8mm;
      display: grid;
      grid-template-rows: auto auto 1fr;
      gap: 0.3mm;
    }

    .qr-label,
    .qr-hint {
      text-align: right;
      font-family: var(--font-mono);
      text-transform: uppercase;
      line-height: 1;
    }

    .qr-label {
      font-size: 5.6pt;
      color: #4b5563;
      letter-spacing: 0.08em;
      font-weight: 700;
    }

    .qr-hint {
      font-size: 5.2pt;
      color: #9ca3af;
      letter-spacing: 0.06em;
    }

    .qr-card .qr {
      width: 100%;
      height: 100%;
      object-fit: contain;
      image-rendering: pixelated;
      display: block;
    }

    .scan-note {
      text-align: center;
      font-size: 6.5pt;
      color: #6b7280;
      max-width: 65mm;
      line-height: 1.35;
    }

    .manual-sep {
      display: flex;
      align-items: center;
      gap: 2mm;
      padding: 0 6mm;
    }

    .manual-sep::before,
    .manual-sep::after {
      content: "";
      height: 0.18mm;
      background: #d1d5db;
      flex: 1 1 auto;
    }

    .manual-sep span {
      font-family: var(--font-mono);
      font-size: 5.8pt;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #9ca3af;
      white-space: nowrap;
    }

    .manual-block {
      border: 0.2mm solid #d1d5db;
      background: #f9fafb;
      padding: 1.3mm 1.8mm;
      display: grid;
      gap: 0.7mm;
    }

    .fallback-list {
      display: grid;
      gap: 0.7mm;
    }

    .fallback {
      border: 0.2mm solid #d1d5db;
      background: #fff;
      padding: 0.7mm 1.5mm;
      font-family: var(--font-mono);
      font-size: 6.7pt;
      line-height: 1.3;
      color: #334155;
    }

    .fallback-title {
      font-family: var(--font-display);
      font-size: 5.7pt;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #6b7280;
      font-weight: 800;
      margin-bottom: 0.3mm;
    }

    .fallback-lines {
      counter-reset: line var(--line-offset, 0);
    }

    .fallback-line {
      position: relative;
      white-space: pre;
      padding-left: 6.2mm;
    }

    .fallback-line::before {
      counter-increment: line;
      content: counter(line, decimal-leading-zero);
      position: absolute;
      left: 0;
      width: 5mm;
      text-align: right;
      color: #9ca3af;
      font-size: 5.5pt;
      letter-spacing: 0.06em;
    }

    .footer {
      border-top: 0.45mm solid #000;
      padding-top: 1mm;
      display: grid;
      gap: 0.8mm;
    }

    .checksum {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      gap: 2mm;
    }

    .checksum-k {
      font-size: 5.8pt;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #6b7280;
      font-weight: 800;
      margin-bottom: 0.2mm;
    }

    .checksum-v {
      font-family: var(--font-mono);
      font-size: 5.8pt;
      color: #111827;
      line-height: 1.2;
      word-break: break-all;
    }

    .warning {
      border: 0.2mm solid #d1d5db;
      background: #f3f4f6;
      padding: 0.8mm 1.4mm;
      font-size: 6.2pt;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: #111827;
      font-weight: 800;
      line-height: 1.35;
    }

    .final-line {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 2mm;
      font-family: var(--font-mono);
      font-size: 5.6pt;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: #6b7280;
    }
  </style>
</head>
<body>
{% for page in pages %}
  <section class="page">
    <div class="doc">
      <header class="header">
        <div class="top">
          <div>
            <div class="class-line">Security Artifact Confidential</div>
            <h1 class="title">{{ doc.title }}</h1>
            <div class="subtitle">{{ doc.subtitle }}</div>
          </div>
          <div class="badge-col">
            <div class="badge">Shard {{ shard_index }} / {{ shard_total }}</div>
            <div class="master-ref">Master key ref: {{ doc_id[:8] }}</div>
          </div>
        </div>

        <div class="meta-grid">
          <div class="meta-item">
            <div class="meta-k">Document ID</div>
            <div class="meta-v">{{ doc_id }}</div>
          </div>
          <div class="meta-item">
            <div class="meta-k">Created (UTC)</div>
            <div class="meta-v">{{ created_timestamp_utc }}</div>
          </div>
          <div class="meta-item">
            <div class="meta-k">Page</div>
            <div class="meta-v">{{ page.page_label }}</div>
          </div>
          <div class="meta-item">
            <div class="meta-k">Valid Until</div>
            <div class="meta-v">Permanent</div>
          </div>
        </div>
      </header>

      {% if page.instructions_full_page %}
        <section class="instructions-full">
          <div class="instructions-full-label">{{ instructions.label }}</div>
          <div>{{ instructions_lines(instructions.lines, scan_hint_text=instructions.scan_hint) }}</div>
        </section>
      {% else %}
        {% if page.show_instructions %}
        <section class="instructions">
          <div class="instructions-label">{{ instructions.label }}</div>
          <div>{{ instructions_lines(instructions.lines, scan_hint_text=instructions.scan_hint) }}</div>
        </section>
        {% endif %}

        <section class="content">
          <div class="qr-wrap">
            {% if page.qr_items and page.qr_grid %}
              {% if page.qr_items|length == 1 %}
              <div class="single-qr">
                <span class="corner-bl"></span>
                <span class="corner-br"></span>
                <img class="qr" src="{{ page.qr_items[0].data_uri }}" alt="QR code {{ page.qr_items[0].index }}">
              </div>
              {% else %}
              <div
                class="qr-grid"
                style="--qr-size: {{ page.qr_grid.size_mm }}mm; --qr-gap-x: {{ page.qr_grid.gap_x_mm }}mm; --qr-gap-y: {{ page.qr_grid.gap_y_mm }}mm; --qr-cols: {{ page.qr_grid.cols }};"
              >
                {% for slot in page.qr_items %}
                <div class="qr-card">
                  <div class="qr-label">Part {{ "%02d"|format(slot.index) }}</div>
                  <div class="qr-hint">Signing Segment</div>
                  <img class="qr" src="{{ slot.data_uri }}" alt="QR code {{ slot.index }}">
                </div>
                {% endfor %}
              </div>
              {% endif %}
            {% endif %}

            <div class="scan-note">Scan with the secure recovery tool. Ensure adequate lighting and high-contrast print quality.</div>
          </div>

          <div class="manual-sep"><span>Manual Entry Fallback</span></div>

          {% if page.fallback_blocks %}
          <div class="manual-block">
            <div class="fallback-list">
              {% for block in page.fallback_blocks %}
              <div class="fallback">
                {% if block.title %}<div class="fallback-title">{{ block.title }}</div>{% endif %}
                <div class="fallback-lines" style="--line-offset: {{ block.line_offset }};">
                  {% for line in block.lines %}
                  <div class="fallback-line">{{ line }}</div>
                  {% endfor %}
                </div>
              </div>
              {% endfor %}
            </div>
          </div>
          {% endif %}
        </section>
      {% endif %}

      <footer class="footer">
        <div class="checksum">
          <div>
            <div class="checksum-k">SHA-256 Checksum</div>
            <div class="checksum-v">{{ doc_id }}</div>
          </div>
        </div>
        <div class="warning">Warning: Store this document in a secure, offline location. Do not photograph or digitally transmit.</div>
        <div class="final-line">
          <span>Page {{ page.page_num }} of {{ pages|length }}</span>
          <span>Generated by Security Vault System v4.2</span>
        </div>
      </footer>
    </div>
  </section>
{% endfor %}
</body>
</html>
