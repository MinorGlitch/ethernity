{% set brand_name = brand_name|default("Ethernity") %}
{% set logo_src_value = logo_src|default("") %}
{% if not logo_src_value %}
  {% set logo_src_value = asset_data_uri("logo.png") %}
{% endif %}
{% set page_width_mm = page_width_mm|default(114) %}
{% set page_height_mm = page_height_mm|default(162) %}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      /* C6 envelope: 114mm x 162mm (portrait), 162mm x 114mm (landscape) */
      size: {{ page_width_mm }}mm {{ page_height_mm }}mm;
      margin: 0;
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", sans-serif;
      color: #000;
      background: #fff;
    }
    .page {
      position: relative;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      overflow: hidden;
      background: #fff;
    }
    .frame {
      position: absolute;
      inset: 7mm;
      border: 0.35mm solid #000;
      border-radius: 3mm;
    }
    .logo-center {
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      display: grid;
      place-items: center;
      text-align: center;
      width: 130mm;
      max-width: calc(100% - 18mm);
    }
    .logo {
      display: block;
      width: 100mm;
      max-width: 100%;
      height: auto;
      margin: 0 auto;
    }
  </style>
</head>
<body>
  <div class="page">
    <div class="frame"></div>
    <div class="logo-center">
      <img class="logo" src="{{ logo_src_value }}" alt="{{ brand_name }} logo">
    </div>
  </div>
</body>
</html>
