<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <style>
    @page {
      size: {{ page_size_css }};
      margin: 0;
    }
    :root {
      --ink: rgb(15, 30, 45);
      --ink-muted: rgb(70, 80, 90);
      --ink-soft: rgb(120, 130, 140);
      --ink-label: rgb(90, 100, 110);
      --ink-body: rgb(30, 40, 50);
      --accent: rgb(15, 30, 45);
      --panel: #eef3f9;
      --panel-border: #cdd9e6;
      --paper-top: #ffffff;
      --paper-bottom: #f1f6fc;
      --grid: rgba(15, 31, 46, 0.04);
      --qr-border: #c6d2e0;
      --shadow: rgba(15, 31, 46, 0.18);
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: "Trebuchet MS", "Gill Sans", Tahoma, sans-serif;
      color: var(--ink);
      background: #ffffff;
    }
    .page {
      position: relative;
      width: {{ page_width_mm }}mm;
      height: {{ page_height_mm }}mm;
      page-break-after: always;
      background: #ffffff;
      overflow: hidden;
    }
    .page:last-child {
      page-break-after: auto;
    }
    .header {
      position: absolute;
      left: {{ margin_mm }}mm;
      top: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: flex;
      justify-content: space-between;
      gap: 8mm;
    }
    .header-left {
      width: 70%;
    }
    .header-right {
      width: 30%;
      text-align: right;
      font-size: 8pt;
      font-style: italic;
      color: var(--ink-soft);
      line-height: 1.2;
    }
    .header-right div:first-child {
      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-style: normal;
      font-weight: 600;
      color: var(--ink-muted);
      font-size: 7pt;
    }
    .header-right div:last-child {
      font-family: "Courier New", Courier, monospace;
      font-style: normal;
      color: var(--ink);
    }
    .title {
      font-size: 20pt;
      font-weight: bold;
      font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
      color: var(--ink);
      line-height: 1.2;
      letter-spacing: 0.02em;
    }
    .subtitle {
      font-size: 10pt;
      font-style: italic;
      color: var(--ink-muted);
      line-height: 1.2;
    }
    .divider {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      height: 0.5mm;
      background: linear-gradient(90deg, var(--accent), rgba(15, 31, 46, 0));
    }
    .instructions,
    .keys {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ usable_width_mm }}mm;
      display: grid;
      grid-template-columns: 24mm auto;
      column-gap: 2mm;
      background:
        linear-gradient(
          90deg,
          var(--accent) 0,
          var(--accent) 1.8mm,
          transparent 1.8mm,
          transparent 100%
        ),
        var(--panel);
      box-shadow: 0 0 0 0.35mm var(--panel-border);
      border-radius: 2mm;
      padding: 0 2.5mm 0 3.2mm;
    }
    .instructions {
      font-size: 9pt;
      line-height: 4.5mm;
      color: var(--ink-body);
    }
    .instructions-label,
    .keys-label {
      font-size: 7pt;
      font-weight: bold;
      color: var(--ink-label);
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }
    .keys {
      font-family: "Courier New", Courier, monospace;
      font-size: 8pt;
      line-height: 4.0mm;
      color: var(--ink-body);
    }
    .fallback {
      position: absolute;
      left: {{ margin_mm }}mm;
      width: {{ fallback.width_mm }}mm;
      font-family: "Courier New", Courier, monospace;
      font-size: 10pt;
      line-height: 4.2mm;
      color: var(--ink);
      background: #ffffff;
      padding: 0 2mm;
      overflow: hidden;
      box-shadow: 0 0 0 0.35mm var(--panel-border);
      border-radius: 2mm;
    }
    .fallback-title {
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      color: var(--ink-muted);
    }
    .fallback-line {
      line-height: 4.2mm;
      margin: 0;
    }
  </style>
</head>
<body>
{% for page in pages %}
  <section class="page">
    <div class="header">
      <div class="header-left">
        <div class="title">Recovery Document</div>
        <div class="subtitle">Keys + Text Fallback</div>
      </div>
      <div class="header-right">
        <div>{{ page.page_label }}</div>
        <div>Document ID: {{ doc_id }}</div>
      </div>
    </div>
    <div class="divider" style="top: {{ page.divider_y_mm }}mm;"></div>

    {% if page.page_num == 1 %}
    <div class="instructions" style="top: {{ page.instructions_y_mm }}mm;">
      <div class="instructions-label">Instructions</div>
      <div>
        <div>This document contains recovery keys and full text fallback.</div>
        <div>Keep it separate from the QR document.</div>
        <div>Fallback includes AUTH + MAIN sections; keep the labels when transcribing.</div>
      </div>
    </div>
    {% endif %}

    {% if page.show_keys %}
    <div class="keys" style="top: {{ page.keys_y_mm }}mm;">
      <div class="keys-label">Keys</div>
      <div>
        {% for line in keys.lines %}
        <div>{{ line }}</div>
        {% endfor %}
      </div>
    </div>
    {% endif %}

    {% if page.fallback_blocks %}
      {%- for block in page.fallback_blocks %}
      <div
        class="fallback"
        style="top: {{ block.y_mm }}mm; height: {{ block.height_mm }}mm;"
      >
        {%- if block.title %}
        <div class="fallback-title">{{ block.title }}</div>
        {%- endif %}
        {%- for line in block.lines %}
        <div class="fallback-line">{{ line }}</div>
        {%- endfor %}
      </div>
      {%- endfor %}
    {% endif %}
  </section>
{% endfor %}
</body>
</html>
